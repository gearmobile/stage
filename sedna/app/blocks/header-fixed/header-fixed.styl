.header-fixed
	position fixed
	top 0
	left 0
	width 100%
	z-index 99

	&__center
		display flex
		width $width
		margin auto
		padding 4rem 1rem 3rem
		justify-content space-between
		align-items center
		box-shadow 0 .1rem 0 rgba($color-white, .2)
		transition all .2s

		& a
			text-transform uppercase
			transition color .2s

		&--active
			width 100%
			padding 1.8rem 10rem
			box-shadow 0 .1rem .6rem rgba($color-black, .3)
			background-color darken($charcoal-grey, 20%)

	&__primary
		display flex
		justify-content space-between

	&__logo
		font-size 2.4rem
		font-family $opensans-bold
		margin-right 7rem
		color $grey-blue-two

	&__navigation
		display flex
		justify-content space-between
		align-items center

		& > a
			margin 0 2rem
			font-size 1.3rem
			color $color-white

			&:hover
			&:active
				color $warm-pink

	&__secondary
		display flex
		justify-content center
		align-items center

		& a
			display block
			padding .8rem 2.6rem .9rem
			border .2rem solid $color-white
			border-radius 50em
			font-size 1.3rem
			color $color-white
			transition border-color .2s

			&:nth-child(1)
				margin-right 1rem

			&:nth-child(2)
				margin-left 1rem


			&:hover
			&:active
				color $warm-pink
				border-color $warm-pink
