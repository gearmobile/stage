.testimonials
	background url(../images/bg-testimonials.jpg) 50% 0 no-repeat
	background-size cover


	// SWIPER SLIDER
	// ------------------------------------------

	& > .swiper-container
		width 100%
		height 100%

		& > .swiper-wrapper > .swiper-slide
			display flex
			flex-direction column
			height 100vh
			justify-content center
			align-items center
			text-align center

		& > .swiper-pagination
			bottom 10%

		& > .swiper-pagination > .swiper-pagination-bullet
			size(1.2rem)
			background-color $slate-grey-two
			opacity 1
			transition background-color .1s, border .1s

		& > .swiper-pagination > .swiper-pagination-bullet-active
			background-color transparent
			border .2rem solid $color-white

		& > .swiper-pagination > .swiper-pagination-bullet:hover
		& > .swiper-pagination > .swiper-pagination-bullet:active
			background-color $color-white

		& > .swiper-button-next
			right 15%
			background-image url('data:image/svg+xml;base64,')

			+below($bp1)
				display none

		& > .swiper-button-prev
			left 15%
			background-image url('data:image/svg+xml;base64,')

			+below($bp1)
				display none

	// IMAGE
	// ------------------------------------------

	&__image
		margin-bottom 3rem
		border .3rem solid $color-white
		border-radius 50%
		size(8rem)

		& > img
			display block
			width 100%
			height auto
			border-radius 50%


	// TITLE
	// ------------------------------------------

	&__title
		margin 0 1rem 3rem
		font-size 4rem
		quotes '\0022\00a0' '\00a0\0022'
		color $color-white

		&::before
			content open-quote

		&::after
			content close-quote

		+below($bp2)
			font-size 3rem

		+below($bp4)
			font-size 2rem

	// SUBTITLE
	// ------------------------------------------

	&__subtitle
		margin 0 1rem
		font-family $opensans-light
		line-height 1.6
		letter-spacing .2rem
		text-transform uppercase
		color $cool-grey

		+below($bp2)
			font-size 1.4rem

		+below($bp4)
			font-size 1.1rem
