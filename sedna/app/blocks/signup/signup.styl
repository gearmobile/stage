.signup
	padding 12rem 0
	background-color $color-white

	&__inner
		lost-center $width

	&__center
		lost-column 6/12
		lost-column-gutter 2rem
		lost-offset -3/12


	// SIGNUP TITLE
	// ---------------------------------------------

	&__title
		margin-bottom 1.5rem
		font-size 2.4rem
		font-weight 700
		line-height 2
		text-align center
		color $charcoal-grey


	// SIGNUP SUBTITLE
	// ---------------------------------------------

	&__subtitle
		margin-bottom 3rem
		font-family $opensans-light
		line-height 2
		text-align center
		color $slate-grey


	// SIGNUP EMAIL & PASSWORD
	// ---------------------------------------------

	&__wrapper
		margin-bottom 1rem
		padding 1.2rem 1.2rem 1.3rem 5rem
		background-repeat no-repeat
		background-position 1.8rem 50%
		border .1rem solid $silver
		border-radius .5rem
		border-radius 5px

		&:nth-child(1)
			background-image url('data:image/svg+xml;base64,')

		&:nth-child(2)
			background-image url('data:image/svg+xml;base64,')

		&:hover
		&:hover > input
			color darken($silver, 20%)
			border-color darken($silver, 10%)

	&__email
	&__password
	&__button
		display block
		width 100%

	&__email
	&__password
		padding .5rem 0 .5rem 2rem
		font-size 1.4rem
		color $silver
		border-width 0 0 0 .1rem
		border-style solid
		border-color transparent transparent transparent $silver


	// SIGNUP FORM BUTTON
	// ---------------------------------------------

	&__button
		padding 1.6rem 0
		text-transform uppercase
		color $color-white
		background-color $warm-pink
		border none
		border-radius .5rem

		&:hover
		&:active
		&:focus
			background-color darken($warm-pink, 5%)
