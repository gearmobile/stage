.news
	display flex
	flex-direction column
	justify-content center
	align-items center

	&__inner
		lost-center 100%
		padding 0 1rem
		margin-bottom 6rem

	&__column
		lost-column 4/12
		lost-column-gutter 1rem
		text-align center

	&__image
		display block
		position relative
		margin-bottom 3.4rem

		& > img
			display block
			width 100%
			height auto

		&::before
			content ''
			display block
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background-color rgba($color-white, .3)
			transition background-color .2s

		&:hover::before
		&:active::before
			background-color rgba($color-white, .01)

	&__title
		text-transform uppercase
		color $cool-grey
		font-size 1.2rem
		font-family $opensans-bold
		margin-bottom 2rem

	&__link
		color $slate-grey
		font-size 1.5rem
		transition color .2s

		&:hover
		&:active
			color lighten($slate-grey, 20%)

	&__button
		display block
		padding 1.2rem 3rem
		border .2rem solid $warm-pink
		border-radius 50em
		font-size 1.3rem
		text-transform uppercase
		color $warm-pink
		transition background-color .2s, color .2s

		&:hover
		&:active
			background-color $warm-pink
			color $color-white
