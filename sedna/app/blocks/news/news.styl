.news
	display flex
	flex-direction column
	justify-content center
	align-items center

	&__inner
		margin-bottom 6rem
		padding 0 1rem
		lost-utility clearfix

	&__column
		text-align center
		lost-column 1/3
		lost-column-gutter 1rem

	&__image
		position relative
		margin-bottom 3.4rem
		display block

		& > img
			display block
			width 100%
			height auto

		&::before
			position absolute
			top 0
			left 0
			display block
			width 100%
			height 100%
			content ''
			background-color rgba($color-white, .3)
			transition background-color .2s

		&:hover::before
		&:active::before
			background-color rgba($color-white, .01)

	&__title
		margin-bottom 2rem
		font-family $opensans-bold
		font-size 1.2rem
		text-transform uppercase
		color $cool-grey

	&__link
		font-size 1.5rem
		color $slate-grey
		transition color .2s

		&:hover
		&:active
			color lighten($slate-grey, 20%)

	&__button
		padding 1.2rem 3rem
		display block
		font-size 1.3rem
		text-transform uppercase
		color $warm-pink
		border .2rem solid $warm-pink
		border-radius 50em
		transition background-color .2s, color .2s

		&:hover
		&:active
			color $color-white
			background-color $warm-pink
