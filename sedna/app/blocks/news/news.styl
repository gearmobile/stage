.news
	padding 12rem 0
	display flex
	flex-direction column
	justify-content center
	align-items center

	&__inner
		margin-bottom 6rem
		padding 0 1rem
		lost-utility clearfix

	&__column
		text-align center
		lost-column 1/3
		lost-column-gutter 1rem

		+below($bp1)
			lost-column 1/1
			lost-column-gutter 0

			&:not(:last-child)
				margin-bottom 8rem

	&__image
		position relative
		margin-bottom 3.4rem
		display block
		overflow hidden

		& > img
			display block
			width 100%
			height auto
			transition transform .5s

		&:hover > img
			transform scale(1.1)

			+below($bp1)
				transform scale(1)

		&::before
			position absolute
			top 0
			left 0
			display block
			width 100%
			height 100%
			content ''
			background-color rgba($color-white, .3)
			transition all .2s

		&:hover::before
		&:active::before
			background-color rgba($color-white, .01)

	&__caption
		text-align center

	&__title
		margin-bottom 2rem
		font-family $opensans-bold
		font-size 1.8rem
		text-transform uppercase
		color lighten($warm-pink, 20%)

	&__link
		display block
		font-size 1.5rem
		color $slate-grey
		transition color .2s

		&:hover
		&:active
			color lighten($slate-grey, 20%)

		&::after
			font-size 1.1rem
			content ' >'

	&__button
		padding 1.2rem 3rem
		display block
		font-size 1.3rem
		text-transform uppercase
		color $warm-pink
		border .2rem solid $warm-pink
		border-radius 50em
		transition background-color .2s, color .2s

		&:hover
		&:active
			color $color-white
			background-color $warm-pink
