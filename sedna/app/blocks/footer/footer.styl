.footer
	width 100%


	// FOOTER TOP STRIPE
	// -----------------------------------------------------------

	&__top
		height 6rem
		background-color $gunmetal

	&__inner
		lost-center $width-desktop

		+below($bp1)
			width $width-mobile

		& > .to-top-button
			position relative
			display block
			float right
			background-color $charcoal-grey
			size(6rem)

			&:hover
			&:active
			&:focus
				background-color darken($charcoal-grey, 15%)
				outline none

			&::before
				position absolute
				top 50%
				left 50%
				display block
				content ''
				background-image url('data:image/svg+xml;base64,')
				background-repeat no-repeat
				background-position center center
				transform translate(-50%, -50%)
				size(2.2rem, 1.3rem)


	// FOOTER BOTTOM
	// -----------------------------------------------------------

	&__bottom
		padding 12rem 0 16rem
		width 100%
		background $charcoal-grey
		background -moz-linear-gradient(left, $charcoal-grey 0, $charcoal-grey 60%, $charcoal-grey-two 60%, $charcoal-grey-two 100%)
		background -webkit-linear-gradient(left, $charcoal-grey 0, $charcoal-grey 60%, $charcoal-grey-two 60%, $charcoal-grey-two 100%)
		background linear-gradient(to right, $charcoal-grey 0, $charcoal-grey 60%, $charcoal-grey-two 60%, $charcoal-grey-two 100%)


	// FOOTER PRIMARY
	// -----------------------------------------------------------

	&__primary
		padding-right 5em
		lost-column 8/12
		lost-column-gutter 2rem

		+below($bp1)
			padding-left 0
			lost-column 1/1
			lost-column-gutter 0
			margin-bottom 4rem


	// FOOTER MENU
	// -----------------------------------------------------------

	&__menu
		margin-bottom 6rem
		padding-top 2rem
		border-top .1rem solid $slate
		lost-utility clearfix

		& > li
			float left

			& > a
				margin-right 3em
				font-size 1.3rem
				text-decoration none
				text-transform uppercase
				color $color-white
				transition color .2s

				&:hover
				&:active
					color $warm-pink


	// FOOTER COPYRIGHT
	// -----------------------------------------------------------

	&__copyright
	&__designer
	&__developer
		margin-bottom 1rem
		font-family $opensans-light
		color $color-white

		& > a
			font-family Arial, 'Helvetica Neue', Helvetica, sans-serif
			text-decoration none
			color $color-white
			transition color .2s

			&:hover
			&:active
			&:focus
				color $warm-pink


	// FOOTER ICON HEART
	// -----------------------------------------------------------

	&__heart
		display inline-block
		vertical-align middle
		background-image url('data:image/svg+xml;base64,')
		background-repeat no-repeat
		background-position center center
		background-size 90%
		size(1.6rem)


	// FOOTER SECONDARY
	// -----------------------------------------------------------

	&__secondary
		padding-left 3rem
		lost-column 4/12
		lost-column-gutter 2rem

		+below($bp1)
			padding-left 0
			lost-column 1/1
			lost-column-gutter 0


	// FOOTER TITLE
	// -----------------------------------------------------------

	&__title
		margin-top 2rem
		text-transform uppercase
		color $color-white


	// FOOTER SOCIAL ICONS
	// -----------------------------------------------------------

	&__socials
		margin-top 2rem

	&__icon
		position relative
		margin-right 1.5rem
		display inline-block
		vertical-align middle
		border-radius .3rem
		transition background-color .2s
		size(6rem)

		&--twitter
			background-color $azure

			&:hover
			&:active
			&:focus
				background-color darken($azure, 10%)

			&::before
