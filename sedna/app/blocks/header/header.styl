.header
	height 100vh

	// HEADER SLIDER
	// -------------------------------------------------

	& > .swiper-container
		width 100%
		height 100%

		& > .swiper-wrapper > .swiper-slide
			width 100%
			background-position 50% 50%
			background-repeat no-repeat
			background-size cover

			&::before
				content ''
				display block
				position absolute
				top 0
				left 0
				right 0
				bottom 0
				background-color rgba(38, 43, 56, .9)

			&:nth-child(1)
				background-image url(../images/hero-image-01.jpg)

			&:nth-child(2)
				background-image url(../images/hero-image-02.jpg)

			&:nth-child(3)
				background-image url(../images/hero-image-03.jpg)

			&:nth-child(4)
				background-image url(../images/hero-image-04.jpg)

			&:nth-child(5)
				background-image url(../images/hero-image-05.jpg)

			&:nth-child(6)
				background-image url(../images/hero-image-06.jpg)

			&:nth-child(7)
				background-image url(../images/hero-image-07.jpg)

			&:nth-child(8)
				background-image url(../images/hero-image-08.jpg)


	// HEADER LOGO
	// ------------------------------------------

	&__logo
		text-transform uppercase
		font-size 2.4rem
		color #6b758c
		letter-spacing .5rem
		text-decoration none

		& > span
			color $color-white
			transition color .2s

		&:hover > span
		&:active > span
			color $warm-pink


	// HEADER CONTENT
	// -------------------------------------------------------

	&__content
		text-align center
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		z-index 1


	// HEADER TITLE
	// -------------------------------------------------------

	&__title
		font-size 4rem
		text-transform capitalize
		color $color-white
		line-height 7rem
		margin-bottom 2.6rem


	// HEADER SUBTITLE
	// -------------------------------------------------------

	&__subtitle
		font-family $opensans-light
		font-size 2rem
		color $color-white
		line-height 1.8
		margin-bottom 8rem


	// HEADER BUTTONS
	// -------------------------------------------------------

	&__controls
		display flex
		justify-content center

	&__button
		display block
		width 20rem
		valign(5rem)
		margin 0 1rem
		border .2rem solid $warm-pink
		border-radius 50em
		font-size 1.3rem
		color $warm-pink
		text-decoration none
		text-transform uppercase
		transition color .2s, background-color .2s

		&:hover
		&:active
			background-color $warm-pink
			color rgba($color-white, 1)


	// HEADER ARROW
	// -------------------------------------------------------

	&__arrow
		display block
		width 2rem
		height 1.6rem
		position absolute
		z-index 1
		left 50%
		bottom 3%
		background-position 50% 50%
		background-repeat no-repeat
		background-size 90%
		background-image url('data:image/svg+xml;base64,')
		animation arrowAnime 2s infinite


// HEADER ARROW ANIMATION
// -------------------------------------------------------

@keyframes arrowAnime
	0%, 100%
		transform translate(-50%, 0%)
	50%
		transform translate(-50%, -50%)
	60%
		transform translate(-50%, 50%)
