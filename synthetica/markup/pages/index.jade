html(class="no-js", lang="ru")

    include ../modules/head/head
    include ../modules/topheader/topheader
    include ../modules/hero/hero
    include ../modules/collective/collective
    include ../modules/crew/crew
    include ../modules/overview/overview
    include ../modules/articles/articles
    include ../modules/freebies/freebies
    include ../modules/started/started
    include ../modules/to-top-button/to-top-button
    include ../modules/footer/footer

    head
        +head(head.defaults)
    body.page
        |%=symbols=%
        +topheader()
        +to-top-button()
