.started
    padding: 10rem 0
    background: linear-gradient(to right, #51ccdc 0%, #70f6ea 100%)

    &__center
        lost-center $width flex
        padding: 0 $gutter
        align-items: center
        justify-content: center

    &__offer
        color: $white-color
        font-size: 2.6rem
        margin: 0 4rem 0 0

        & a
            color: $white-color

            &:hover
                text-decoration: none

    &__button
        display: block
        padding: 1.5rem 2rem
        text-transform: uppercase
        color: $white-color
        font-size: 1.3rem
        text-decoration: none
        border: .2rem solid $white-color
