.overview
    min-height: 40rem
    background: url('%=static=%assets/overview/overview-bg.jpg') 50% 50% no-repeat
    background-size: cover

    &__center
        lost-center $width
        padding: 0 $gutter

    &__list
        display: flex
        min-height: 40rem
        justify-content: space-between
        align-items: center
        color: $color-white

    &__item
        display: flex
        justify-content: center
        align-items: center

        & .overview-icon
            width: 6rem
            height: 6rem

            @media screen and (max-width: $bp768)
                width: 4rem
                height: 4rem

            @media screen and (max-width: $bp500)
                width: 2rem
                height: 2rem

    & h3
        font-size: 4.8rem
        margin: 0 0 .5rem

        @media screen and (max-width: $bp768)
            font-size: 3rem

        @media screen and (max-width: $bp500)
            font-size: 2rem

    & p
        font-size: 1.5rem
        text-transform: uppercase
        margin: 0

        @media screen and (max-width: $bp768)
            font-size: 1.2rem

        @media screen and (max-width: $bp500)
            font-size: 1rem

    &__item-holder
        margin: 0 0 0 2rem
