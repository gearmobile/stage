mixin topheader(data)
    .topheader
        .topheader__primary
            a(href='javascript:void();')
                != jadeHelpers.Icon.call(locals, {iconName: 'logo', className: 'topheader-icon'})
                | synthetica
        .topheader__secondary
            ul.topheader__secondary-nav
                li: a(href='#collective') the collective
                li: a(href='#crew') the crew
                li: a(href='#articles') articles
                li: a(href='#freebies') freebies
            ul.topheader__secondary-subscribe
                li: a(href='#subscribe') subscribe
                li: a.topheader__secondary-open(href='javascript:void();')
                        != jadeHelpers.Icon.call(locals, {iconName: 'search', className: 'topheader-search-icon'})
            ul.topheader__secondary-search.is-hidden
                li: input(type="text" id="topheader-search" placeholder="start search here")
                li
                    a.topheader__secondary-close(href="javascript:void();")
                        != jadeHelpers.Icon.call(locals, {iconName: 'cancel-circle', className: 'search-icon'})
            .topheader__secondary-mobile
                button.hamburger.hamburger--spin(type="button")
                    span.hamburger-box
                        span.hamburger-inner
