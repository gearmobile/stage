// THUMB
// ------------------------------------------------------------
.thumb
    display: flex
    flex-direction: column

    &:hover .thumb__image > img
        transform: scale(1.1)


// THUMB IMAGE
// ------------------------------------------------------------
.thumb__image
    margin: 0 0 4rem
    overflow: hidden

    & > img
        display: block
        width: 100%
        height: auto
        transform: scale(1)
        transition: transform .4s
        will-change: transition


// THUMB TITLE
// ------------------------------------------------------------
.thumb__title
    text-transform: uppercase
    font: 700 1.6rem/1.6 $montserrat-regular
    color: $color-grey
    margin: 0 0 1.4rem

    @media screen and (max-width: $bp980)
        text-align: center
        margin: 0 0 3rem


// THUMB TEXT
// ------------------------------------------------------------
.thumb p
    font: 400 1.4rem/1.8 $crimson_text-roman
    color: $color-grey
    margin: 0 0 3rem

