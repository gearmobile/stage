.purchase
    background-color: #2d2d2f
    padding: 4rem 0

    &__center
        lost-center $width flex
        padding: 0 $gutter*2

    &__primary
        display: flex
        width: 70%
        min-height: 10.4rem
        align-items: center
        padding: 0 0 0 15rem
        background: url('%=static=%assets/purchase/purchase-icon.png') 0 50% no-repeat

        @media screen and (max-width: $bp768)
            width: 100%
            padding: 14rem 0 2rem 0
            text-align: center
            background: url('%=static=%assets/purchase/purchase-icon.png') 50% 0 no-repeat

        & p
            font: 400 1.6rem/1.4 $crimson_text-italic
            color: #888888
            margin: 0

    &__secondary
        display: flex
        width: 30%
        min-height: 10.4rem
        justify-content: center
        align-items: center

        @media screen and (max-width: $bp768)
            width: 100%

    &__title
        font: 400 1.6rem/1.6 $montserrat-regular
        margin: 0 0 2rem
        color: #d8d8d8

    &__button
        background-color: transparent
        text-transform: capitalize
        font: 400 1.3rem/1.2 $montserrat-regular
        color: #e3e3e3
        text-decoration: none
        padding: 1.4rem 3.3rem
        border: .2rem solid #e3e3e3
        transition: background-color .2s, color .2s

        &:hover
        &:focus
            background-color: #e3e3e3
            color: #2d2d2f

