// DIAGRAM
// --------------------------------------
.diagram
    background-color #f2f2f2
    padding 6rem 0

    @media screen and ( max-width $tablet )
        padding 10rem 0

    // DIAGRAM CENTER
    // --------------------------------------
    & .center
        display flex
        align-items center

        @media screen and ( max-width $desktop-x )
            flex-direction column

    // DIAGRAM PRIMARY
    // --------------------------------------
    &__primary
        size( 29.8rem, 34.5rem )
        background url( '%=static=%assets/block-diagram/timer.svg' ) 50% 50% no-repeat
        background-size cover
        position relative

        @media screen and ( max-width $desktop-x )
            margin 0 0 6rem

    // DIAGRAM TIMER
    // --------------------------------------
    &__timer
        size( 24rem )
        border-radius 50%
        border 2rem solid $pink-color-pink
        position absolute
        left 50%
        transform translateX( -50% )
        bottom 3rem

    // DIAGRAM COUNT
    // --------------------------------------
    &__count
        color $pink-color-pink
        position absolute
        top 50%
        left 50%
        transform translate( -50%, -50% )
        font 12rem/1 $open-sans--bold

    // DIAGRAM SECONDARY
    // --------------------------------------
    &__secondary
        padding 0 0 0 6rem
        max-width calc( 100% - 358px )

        @media screen and ( max-width $desktop-x )
            padding 0
            max-width 100%
            text-align center

    // DIAGRAM TXT
    // --------------------------------------
    &__content p
        font 1.8rem/1.6 $open-sans--regular
        color $pink-color-dark
        margin 0 0 3rem

        @media screen and ( max-width $tablet )
            font-size 1.6rem

    // DIAGRAM TITLE
    // --------------------------------------
    &__title
        font 3rem/1.2 $open-sans--bold
        color $pink-color-black
        margin 0 0 2rem

        @media screen and ( max-width $tablet )
            font-size 2.4rem

    // DIAGRAM LINK
    // --------------------------------------
    &__link
        color $pink-color-pink
        font 1.8rem/1.6 $open-sans--regular
        text-decoration underline

        &:hover
        &:focus
            text-decoration none
            color $pink-color-dark

        &:active
            color rgba( $pink-color-dark, .3 )
