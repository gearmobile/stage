// SECTION-QUINARY
// ----------------------------------------
.section-quinary
    lost-center 100% flex
    padding 4rem 0
    align-items center

    // SECTION-QUINARY PRIMARY
    // ----------------------------------------
    &__primary
        lost-column 1/2
        lost-column-gutter 0

        @media screen and ( max-width $tablet )
            lost-column 1/1
            text-align center
            margin 0 0 4rem

    // SECTION-QUINARY SECONDARY
    // ----------------------------------------
    &__secondary
        lost-column 1/2
        lost-column-gutter 0
        text-align right

        @media screen and ( max-width $tablet )
            lost-column 1/1
            text-align center

    // SECTION-QUINARY BUTTON
    // ----------------------------------------
    &__button
        size( 30rem, 6rem )
        background-color $pink-color-green
        text-transform uppercase
        font 1.8rem/1.2 $open-sans--bold
        color $pink-color-white
        transition background-color .2s, color .2s

        &:hover
            background-color darken( $pink-color-green, 20% )

        &:active
        &:focus
            color rgba( $pink-color-white, .3 )
            background-color darken( $pink-color-green, 20% )

        &.is-disabled
            background-color #e5e5e5
            color $pink-color-white
            pointer-events none

        @media screen and ( max-width $mobile )
            size( 26rem, 6rem )

    // SECTION-QUINARY REMARK
    // ----------------------------------------
    &__remark
        text-transform uppercase
        color $pink-color-dark
        font 1.4rem/1.2 $open-sans--regular
        white-space nowrap

        &::before
            content '*'
            color $pink-color-pink
            margin 0 .5rem 0 0

        @media screen and ( max-width $mobile )
            font-size 1.2rem
