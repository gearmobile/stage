// PRICE
// -----------------------------
.price
    background-color $pink-color-grey
    padding 14rem 0 8rem
    position relative

    // PRICE TABLE
    // -----------------------------
    & .table
        display flex

        @media screen and ( max-width $tablet-x )
            flex-direction column

        // PRICE TABLE COLUMN
        // -----------------------------
        &__column

            &:nth-child(1)
                flex 1 0 25rem

                @media screen and ( max-width $tablet )
                    display none

            &:nth-child(2)
            &:nth-child(3)
            &:nth-child(4)
                flex 1 1 calc( 100% / 3 )

            @media screen and ( max-width $tablet )
                &:nth-child(2) .table__item
                    border-left .2rem solid #e5e5e5

            @media screen and ( max-width $tablet-x )
                &:nth-child(3) .table__item
                &:nth-child(4) .table__item
                    border-left .2rem solid #e5e5e5

            &:not(:first-child) .table__caption
                background-color $pink-color-dark

            &:nth-child(2) .table__caption
            &:nth-child(3) .table__caption
                border-right .2rem solid $pink-color-grey

        // PRICE TABLE CAPTION && ITEM
        // -----------------------------
        &__caption
        &__item
            display flex
            justify-content center
            align-items center

        // PRICE TABLE CAPTION
        // -----------------------------
        &__caption
            flex-direction column
            height 10rem
            text-transform uppercase
            color $color-white
            position relative
            overflow hidden

            &--first
                text-indent -999em

        // PRICE TABLE ITEM
        // -----------------------------
        &__item
            height 10rem
            position relative
            overflow hidden
            background-color $color-white
            height 6rem
            border-bottom .2rem solid #e5e5e5
            border-right .2rem solid #e5e5e5

            &--heading
                justify-content flex-start
                font 1.8rem/1.2 $open-sans--regular
                color $pink-color-dark
                padding 0 0 0 2.6rem
                border-left .2rem solid #e5e5e5

            &--first
                border-top .2rem solid #e5e5e5

        // PRICE TABLE TITLE
        // -----------------------------
        &__title
            font 1.8rem/1.2 $open-sans--bold
            margin 0 0 .4rem

        // PRICE TABLE RPICE VALUE
        // -----------------------------
        &__value
            font 2.4rem/1.2 $open-sans--light

        // PRICE TABLE ICONS
        // -----------------------------
        & .table-icon-yes
        & .table-icon-no
            size( 2.6rem )

        & .table-icon-yes
            fill: $pink-color-green

        & .table-icon-no
            fill: $pink-color-red

        // PRICE TABLE LABEL
        // -----------------------------
        &__label
            display inline-block
            padding 0 3rem
            font 1.4rem/2.6rem $open-sans--semibold
            text-transform uppercase
            background-color $pink-color-pink
            position absolute
            transform rotate( -45deg )
            top 6px
            left -26px
