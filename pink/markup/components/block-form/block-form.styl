// FORM
// ------------------------------
.pink-form
    //

    // FORM CENTER
    // ------------------------------
    & .center
        //

    // FORM FORM
    // ------------------------------
    & .form
        padding 10rem 0 0 0

        // FORM TITLE
        // ------------------------------
        &__title
            font 1.8rem/1.4 $open-sans--regular
            color $pink-color-dark
            text-align center
            max-width 75rem
            margin 0 auto 8rem

        // FORM SECTION
        // ------------------------------
        & .section
            padding 4.4rem 6rem
            margin 0 0 6rem
            position relative

            &:nth-child(2)
            &:nth-child(3)
            &:nth-child(4)
            &:nth-child(5)
                border .2rem solid #e5e5e5

            // FORM LEGEND
            // ------------------------------
            &__caption
                text-transform uppercase
                color $pink-color-pink
                font 1.4rem/1.2 $open-sans--regular
                text-align center
                padding 0 4rem
                position absolute
                left 50%
                top -.8rem
                transform translateX(-50%)
                background-color $pink-color-white

            // FORM DESCRIPTION
            // ------------------------------
            &__description
                width 100%
                min-height 13rem
                padding 2.5rem 2.2rem 2.2rem 2.2rem
                font 1.8rem/1.4 $open-sans--regular
                color $pink-color-dark

            &__half
                width 46%

            &__field
                border .2rem solid #e5e5e5

        & .section--half
            display flex
            justify-content space-between

        // FORM LIST
        // ------------------------------
        & .list
            display flex
            justify-content center
            flex-wrap wrap

            // FORM LIST ITEM
            // ------------------------------
            &__item
                display flex
                flex 0 1 30%
                align-items center
                height 3.9rem
                padding 0 0 0 6rem

                &:nth-child( -n+3 )
                    margin 0 0 4rem

            // FORM LIST CHECK
            // ------------------------------
            &__check
                display none

                &:checked + .list__label::before
                    bg( $check-2 )

            // FORM LIST LABEL
            // ------------------------------
            &__label
                font 1.8rem/1.4 $open-sans--regular
                cursor pointer
                position relative

                &::before
                    content ''
                    display block
                    size( 3.9rem )
                    position absolute
                    left -6rem
                    top 50%
                    transform translateY( -50% )
                    bg( $check-1 )
