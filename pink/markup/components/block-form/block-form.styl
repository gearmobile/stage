// FORM
// ------------------------------
.pink-form
    //

    // FORM CENTER
    // ------------------------------
    & .center
        //

    // FORM FORM
    // ------------------------------
    & .form
        padding 10rem 0 0 0

        // FORM TITLE
        // ------------------------------
        &__title
            font 1.8rem/1.4 $open-sans--regular
            color $pink-color-dark
            text-align center
            max-width 75rem
            margin 0 auto 8rem

        // FORM SECTION
        // ------------------------------
        & .section
            margin 0 0 6rem

        // FORM SECTION BORDERED
        // ------------------------------
        & .section--bordered
            padding 4.4rem 6rem
            position relative
            border .2rem solid #e5e5e5

        // FORM LEGEND
        // ------------------------------
        & .section__caption
            text-transform uppercase
            color $pink-color-pink
            font 1.4rem/1.2 $open-sans--regular
            text-align center
            letter-spacing .1rem
            padding 0 4rem
            position absolute
            left 50%
            top -.8rem
            transform translateX(-50%)
            background-color $pink-color-white

        // FORM DESCRIPTION
        // ------------------------------
        & .section__description
            width 100%
            min-height 13rem
            padding 2.5rem 2.2rem 2.2rem 2.2rem
            font 1.8rem/1.4 $open-sans--regular
            color $pink-color-dark
            border .2rem solid #e5e5e5

        // FORM SECTION SPLIT
        // ------------------------------
        & .section--split
            display flex
            justify-content space-between

        // FORM SECTION HALF
        // ------------------------------
        & .section--half
            width 46%

            & label
                text-transform uppercase
                color $pink-color-pink
                font 1.4rem/1.2 $open-sans--regular
                letter-spacing .1rem
                margin 0 0 0 2rem

        // FORM SECTION DOUBLE
        // ------------------------------
        & .section__field
            display flex
            justify-content space-between
            align-items center
            padding 2rem
            margin 0 0 2rem
            border .2rem solid #e5e5e5

            & input
                width 100%
                background-color transparent
                border 0
                font 1.8rem/1.2 $open-sans--regular
                color $pink-color-dark

                &:focus
                    outline none

            & .section-icon
                size( 2rem )
                margin 0 0 0 2rem
                fill $pink-color-pink

        // FORM LIST
        // ------------------------------
        & .list
            display flex
            justify-content center
            flex-wrap wrap

            // FORM LIST ITEM
            // ------------------------------
            &__item
                display flex
                flex 0 1 30%
                align-items center
                height 3.9rem
                padding 0 0 0 6rem

                &:nth-child( -n+3 )
                    margin 0 0 4rem

                &:hover .list__label::before
                    border-color $pink-color-dark

            // FORM LIST CHECK
            // ------------------------------
            &__check
                position absolute
                clip rect( 0, 0, 0, 0 )

                &:checked + .list__label::before
                    background url( '%=static=%assets/block-form/checked.png' ) 50% 50% no-repeat
                    border-color $pink-color-pink

            // FORM LIST LABEL
            // ------------------------------
            &__label
                font 1.8rem/1.4 $open-sans--regular
                cursor pointer
                position relative

                &::before
                    content ''
                    display block
                    size( 3.9rem )
                    border .2rem solid #e5e5e5
                    position absolute
                    left -6rem
                    top 50%
                    transform translateY( -50% )
                    transition border-color .2s
