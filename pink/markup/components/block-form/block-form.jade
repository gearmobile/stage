mixin block-form()
    section.pink-form
        .center
            form.form( method='post' action='action.php' )
                h2.form__title
                    | Поделитесь своей историей и получите шанс выиграть ценный приз — 1000 миль на вашу бонусную карту! Пожалуйста, заполните форму ниже:
                .section.section--half
                    .section__half
                        .section__row
                            label( for='name' ) имя
                            input( type='text' id='name' placeholder='Введите ваше имя' required )
                        .section__row
                            label( for='surname' ) фамилия
                            input( type='text' id='surname' placeholder='Укажите фамилию' required )
                        .section__row
                            label( for='second-name' ) отчество
                            input( type='text' id='second-name' placeholder='Ну и отчество тоже' required )
                    .section__half
                        small.section__caption С каким приложением путешествовали?
                        .section__row
                            input( type='radio' id='ios' checked )
                            label( for='ios' ) Pink для iOS
                        .section__row
                            input( type='radio' id='android' )
                            label( for='android' ) Pink на Android
                        .section__row
                            input( type='radio' id='windows' )
                            label( for='windows' ) Windows Phone
                .section.section--half
                    small.section__caption контактная информация
                    .section__half
                        .section__field
                            input( type='tel' id='tel' placeholder='+7 ХХХ ХХХ-ХХ-ХХ' )
                            != jadeHelpers.Icon.call( locals, { iconName: 'old-phone', className: 'section-icon' })
                        label( for='tel' ) номер телефона
                    .section__half
                        .section__field
                            input( type='email' id='email' placeholder='Введите почту' )
                            != jadeHelpers.Icon.call( locals, { iconName: 'mail', className: 'section-icon' })
                        label( for='email' ) адрес почты
                .section
                    small.section__caption ваши безбашенные достижения в путешествии
                    ul.list
                        li.list__item
                            input.list__check( type='checkbox' id='one' checked )
                            label.list__label( for='one' ) Сделал селфи с акулой
                        li.list__item
                            input.list__check( type='checkbox' id='two' )
                            label.list__label( for='two' ) Видел Чака Норриса
                        li.list__item
                            input.list__check( type='checkbox' id='three' checked )
                            label.list__label( for='three' ) Удержал башню
                        li.list__item
                            input.list__check( type='checkbox' id='four' checked )
                            label.list__label( for='four' ) Обгорел на пляже
                        li.list__item
                            input.list__check( type='checkbox' id='five' )
                            label.list__label( for='five' ) Накупил сувениров
                        li.list__item
                            input.list__check( type='checkbox' id='six' )
                            label.list__label( for='six' ) Разгромил отель
                .section
                    small.section__caption опишите свои эмоции
                    textarea.section__description( placeholder='Можно прям в красках, не стесняясь в выражениях' )
