// TOPHEADER
// ------------------------------------------
.topheader
    position fixed
    top 0
    left 0
    width 100%
    padding 2rem 0
    z-index 9999
    background-color rgba( $color-black, .3 )
    transition all .2s

    &.js-hidden
        background-color rgba( $color-black, .8 )

    // TOPHEADER CENTER
    // ------------------------------------------
    & .center
        display flex
        justify-content space-between
        align-items center

    // TOPHEADER PRIMARY
    // ------------------------------------------
    &__primary
        //

        // TOPHEADER LOGO
        // ------------------------------------------
        & .logo
            display flex
            align-items center
            text-transform uppercase
            color $color-white
            font 3rem/1.2 $open-sans--regular

            & .topheader-icon-logo
                margin 0 1rem 0 0
                fill: $color-white
                
                @media screen and ( max-width $mobile )
                    display none

            &:hover
            &:focus
                color $pink-color-pink

            &:hover .topheader-icon-logo
            &:focus .topheader-icon-logo
                fill: $pink-color-pink

            &:active
                color rgba( $pink-color-pink, .3 )

            &:active .topheader-icon-logo
                fill: rgba( $pink-color-pink, .3 )

    // TOPHEADER SECONDARY
    // ------------------------------------------
    &__secondary

        @media screen and ( max-width $tablet )
            display none

        // TOPHEADER NAVIGATION
        // ------------------------------------------
        & .navigation
            display flex
            height 4rem
            align-items center
            justify-content space-between

            // TOPHEADER NAVIGATION ITEM
            // ------------------------------------------
            &__item
                margin 0 0 0 8rem
                text-transform capitalize
                font 1.8rem/1.2 $open-sans--regular
                color $color-white
                position relative
                
                @media screen and ( max-width 980px )
                    margin 0 0 0 6rem

                &:first-child
                    margin 0

                &::before
                    content ''
                    display block
                    width 0
                    height .2rem
                    background-color $color-white
                    position absolute
                    bottom -1rem
                    left 0
                    transition width .2s, color .2s

                &:hover::before
                    width 100%

                &:focus
                &:active
                    color rgba( $color-white, .3 )

                &:focus::before
                &:active::before
                    width 0

    // TOPHEADER TERTIARY
    // ------------------------------------------
    &__tertiary
        display none
        
        @media screen and ( max-width $tablet )
            display block
        
        // TOPHEADER TERTIARY ICON
        // ------------------------------------------
        & .topheader-icon-menu
            fill $pink-color-white
            
        &:hover .topheader-icon-menu
        &:focus .topheader-icon-menu
            fill $pink-color-pink
        
        &:active .topheader-icon-menu
            fill rgba( $pink-color-pink, .3 )

