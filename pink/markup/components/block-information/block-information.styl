.information
    //

    &__header
        padding 3rem 0
        background-color $pink-color-white

        @media screen and ( min-width $desktop )
            padding 6rem 0

    &__title
        text-align center
        font 2.4rem/1.6 $open-sans--light
        color $pink-color-dark

        &:nth-child(1)
            margin 0 0 2rem

        @media screen and ( min-width $tablet )
            font-size 4rem
            line-height 1.2

            &:nth-child(1)
                margin 0

        @media screen and ( min-width $desktop )
            font-size 5rem

    &__main
        padding 4rem 2rem 0 2rem
        background-color #f2f2f2

        @media screen and ( min-width $tablet )
            clearfix()

    &__content
        padding 4rem 2rem

        @media screen and ( min-width $tablet )
            float right
            max-width 62%

        @media screen and ( min-width $desktop )
            float none
            max-width 100%
            display flex
            justify-content space-between

    &__item
        text-align center

        &:not(:last-child)
            margin 0 0 4rem

        @media screen and ( min-width $tablet )
            text-align left

        @media screen and ( min-width $desktop )
            flex 0 1 30%
            text-align center

            &:not(:last-child)
                margin 0

    &__thumb
        width 18.6rem
        height 28rem
        background-color cornflowerblue
        margin 0 auto 6rem

        @media screen and ( max-width $desktop )
            display none

    & p
        font 1.4rem/1.6 $open-sans--regular
        color $pink-color-dark

    &__caption
        font 1.8rem/1.2 $open-sans--bold
        color $pink-color-black
        margin 0 0 2rem

    &__picture
        size( 16rem, 32rem )
        margin auto
        background-color salmon

        @media screen and ( min-width $tablet )
            float left
            width 26.8rem
            height 54.8rem

        @media screen and ( min-width $desktop )
            display none
