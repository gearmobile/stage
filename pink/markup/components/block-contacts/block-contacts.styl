// CONTACTS
// -------------------------------------
.contacts
    //

    // CONTACTS HEADER
    // -------------------------------------
    &__header
        padding 6rem 0 4rem
        background-color $color-white

    // CONTACTS TITLE
    // -------------------------------------
    & .title
        font 4rem/1.2 $open-sans--light
        color $pink-color-dark
        text-align center
        margin 0 0 6rem

        @media screen and ( max-width $tablet )
            font 3rem/1.2 $open-sans--light
            margin 0 0 4rem

        @media screen and ( max-width $mobile )
            font 2rem/1.2 $open-sans--light
            margin 0 0 2rem

    // CONTACTS LIST
    // -------------------------------------
    & .list
        display flex
        justify-content space-around
        flex-wrap wrap

        // CONTACTS LIST ITEM
        // -------------------------------------
        &__item
            display flex
            flex-direction column
            align-items center
            flex 0 1 22rem
            margin 2rem

        // CONTACTS LIST SUBTITLE
        // -------------------------------------
        &__subtitle
            font 1.8rem/1.2 $open-sans--bold
            color $pink-color-dark
            margin 0 0 2rem

        // CONTACTS LIST LINK
        // -------------------------------------
        &__link
            font 1.8rem/1.3 $open-sans--light
            text-align center

    // CONTACTS MAIN
    // -------------------------------------
    &__main
        width 100%
        height 52.2rem
        background url( '%=static=%assets/block-contacts/map-desktop.jpg' ) no-repeat
        background-size cover
        position relative

        // CONTACTS MAIN TRIANGLE
        // -------------------------------------
        &::before
            content ''
            display block
            size( 100%, 6.2rem )
            position absolute
            top -.3rem
            left 0
            z-index 10
            background url( '%=static=%assets/block-contacts/triangle-white-footer.svg' ) no-repeat
            background-size cover
