// contacts
// -------------------------------------
.contacts
    //

    &__header
        padding 6rem 0 4rem
        background-color $color-white

    &__title
        font 5rem/1.2 $open-sans--light
        color $pink-color-dark
        text-align center
        margin 0 0 6rem

    &__list
        display flex
        justify-content space-around

    &__item
        display flex
        flex-direction column
        align-items center

    &__subtitle
        font 1.8rem/1.2 $open-sans--bold
        color $pink-color-dark
        margin 0 0 2rem

    &__link
        font 1.8rem/1.2 $open-sans--light

    &__main
        width 100%
        height 52.2rem
        background url( '%=static=%assets/block-contacts/map-desktop.jpg' ) no-repeat
        background-size cover
