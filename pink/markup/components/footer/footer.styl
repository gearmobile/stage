// footer
// ------------------------------
.footer
    background-color $color-white
    padding 6rem 0

    // footer center
    // ------------------------------
    & .center
        display flex
        justify-content space-between
        align-items center

    // footer nav
    // ------------------------------
    &__nav
        display flex
        justify-content center

    // footer nav item
    // ------------------------------
    &__item
        display flex
        justify-content center
        align-items center
        size( 5rem )
        margin 0 .6rem
        background-color #fefefe
        border-radius 50%
        border .3rem solid rgba( $pink-color-dark, .1 )
        transition all .2s

        & .footer-icon
            fill: $pink-color-pink

        &:hover
            border-color $pink-color-dark

        &:focus
        &:active
            border-color rgba( $pink-color-dark, .1 )

            & .footer-icon
                fill: rgba( $pink-color-pink, .3 )

    &__tertiary a
        display flex
        align-items center
        font 1.8rem/1.2 $open-sans--regular
        color $pink-color-dark
        text-transform capitalize

        & .footer-icon-brand
            fill: $pink-color-pink
            margin 0 0 0 1.4rem

        &:hover .footer-icon-brand
            fill: $pink-color-dark

        &:focus .footer-icon-brand
        &:active .footer-icon-brand
            fill: rgba( $pink-color-dark, .3 )
