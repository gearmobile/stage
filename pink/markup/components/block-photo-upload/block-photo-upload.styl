// PHOTO-UPLOAD
// -------------------------------
.photo-upload
    //

    // PHOTO-UPLOAD HEADER
    // -------------------------------
    &__header
        background-color $pink-color-white
        padding 0 0 6rem

    // PHOTO-UPLOAD TITLE
    // -------------------------------
    &__title
        text-align center
        font 1.8rem/1.6 $open-sans--regular
        color $pink-color-dark

    // PHOTO-UPLOAD MAIN
    // -------------------------------
    &__main
        display flex
        background-color #f2f2f2
        padding 4rem 8rem

        @media screen and ( max-width 980px )
            padding 4rem

        @media screen and ( max-width $tablet )
            flex-direction column
            align-items center
            padding 2rem

    // PHOTO-UPLOAD PRIMARY
    // -------------------------------
    &__primary
        size( 30rem, 40rem )
        margin 0 8rem 0 0

        @media screen and ( max-width 980px )
            margin 0 4rem 0 0

        @media screen and ( max-width $tablet )
            margin 0 0 4rem 0

    &__image
        max-width 100%

    // PHOTO-UPLOAD SECONDARY
    // -------------------------------
    &__secondary
        display flex
        flex-direction column
        justify-content space-between
        width calc( 100% - 30rem - 8rem )

        @media screen and ( max-width $tablet )
            width 100%

        // PHOTO-UPLOAD TOOLBAR
        // -------------------------------
        & .toolbar
            //

            // TOOLBAR ITEM
            // -------------------------------
            &__item
                padding 1.4rem 3rem 1.4rem 0
                border-bottom .1rem solid rgba( $pink-color-dark, .1 )
                display flex

                // TOOLBAR ITEM ICON
                // -------------------------------
                & .toolbar-icon
                    size( 4rem )
                    fill rgba( $pink-color-dark, .3 )
                    margin 0 4rem 0 0

                    @media screen and ( max-width $mobile )
                        margin 0 0 4rem

                &:hover .toolbar-icon
                    fill rgba( $pink-color-dark, .5 )

                &:active .toolbar-icon
                    fill $pink-color-pink

                @media screen and ( max-width $mobile )
                    flex-direction column
                    align-items center
                    padding 1rem
                    border-bottom none

            // TOOLBAR FORM
            // -------------------------------
            &__form
                width 100%
                display flex
                align-items center

            // TOOLBAR SLIDER
            // -------------------------------
            &__slider
                width 100%

        // PHOTO-UPLOAD SUBMIT
        // -------------------------------
        & .submit
            display flex
            justify-content space-between

            @media screen and ( max-width 980px )
                flex-direction column
                align-items center

            @media screen and ( max-width $tablet )
                flex-direction row
                justify-content space-around
                padding 4rem 0

            @media screen and ( max-width $mobile )
                flex-direction column
                align-items center

            // PHOTO-UPLOAD ITEM
            // -------------------------------
            &__item:nth-child(1)
                @media screen and ( max-width 980px )
                    margin 0 0 2rem

                @media screen and ( max-width $tablet )
                    margin 0

                @media screen and ( max-width $mobile )
                    margin 0 0 2rem

            // PHOTO-UPLOAD BUTTON
            // -------------------------------
            &__button
                size( 18rem, 5.6rem )
                border .2rem solid $pink-color-pink
                border-radius 50em
                color $pink-color-pink
                text-transform capitalize
                font 1.8rem/1.2 $open-sans--bold
                text-transform all .2s

                &:hover
                &:focus
                    background-color $pink-color-pink
                    color $pink-color-white

                &:active
                    color rgba( $pink-color-white, .3 )

                // PHOTO-UPLOAD BUTTON INACTIVE
                // -------------------------------
                &--cancel
                    border-color rgba( $pink-color-dark, .1 )
                    color rgba( $pink-color-dark, .1 )

                    &:hover
                    &:focus
                        border-color rgba( $pink-color-dark, .3 )
                        color rgba( $pink-color-dark, .3 )
                        background-color transparent

                    &:active
                        background-color rgba( $pink-color-dark, .3 )
                        color rgba( $pink-color-white, .3 )
                        border-color rgba( $pink-color-dark, .3 )
