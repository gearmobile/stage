// SECTION-SECONDARY
// --------------------------------
.section-secondary
    lost-center 100% flex
    padding 4rem 2rem
    margin 0 0 6rem
    border .2rem solid #e5e5e5
    position relative

    // SECTION-SECONDARY PRIMARY
    // --------------------------------
    &__primary
        lost-column 1/2
        lost-column-gutter 0
        display flex
        flex-direction column

    // SECTION-SECONDARY SECONDARY
    // --------------------------------
    &__secondary
        lost-column 1/2
        lost-column-gutter 0
        display flex
        flex-direction column

    // SECTION-SECONDARY CAPTION
    // --------------------------------
    &__caption
        position absolute
        left 50%
        transform translateX(-50%)
        top 0
        padding 0 2rem

    // SECTION-SECONDARY INPUT
    // --------------------------------
    &__input
        //

    // SECTION-SECONDARY LABEL
    // --------------------------------
    &__label
        //
