
// HEADER
// ------------------------------------
.header
    background url( '%=static=%assets/block-header/background-fullsize.jpg' ) 50% 50% no-repeat
    background-size cover

    // HEADER CENTER
    // ------------------------------------
    & .center
        display flex
        height 85.3rem
        position relative
        outline 1px dashed salmon

    // HEADER CONTENT
    // ------------------------------------
    &__content
        lost-column 4/12
        lost-column-gutter 0
        display flex
        flex-direction column
        align-items center
        justify-content center
        color $color-white
        position relative
        z-index 2

        // HEADER CONTENT TITLE
        // ------------------------------------
        & .title
            font 5rem/1.2 $open-sans--light
            text-align center
            padding 0 2rem
            margin 0 0 6rem

        // HEADER CONTENT BUTTON
        // ------------------------------------
        & .button
            font 2rem/1.2 $open-sans--semibold
            color $color-white
            padding 1.8rem 3.2rem 1.6rem
            border .3rem solid $color-white
            border-radius 50em
            margin 0 0 6rem
            transition all .2s

            &:hover
                background-color $color-white
                color $color-black

        // HEADER CONTENT SOCIALS
        // ------------------------------------
        & .socials
            display flex
            justify-content space-between
            align-items center
            width 100%
            padding 0 8rem
            margin 0 0 6rem

            &__item
                size( 5rem )

                &:nth-child(1)
                    bg-svg($header-icon-01)

                &:nth-child(2)
                    bg-svg($header-icon-02)

                &:nth-child(3)
                    bg-svg($header-icon-03)

        // HEADER CONTENT REMARKS
        // ------------------------------------
        & .remarks
            font 1.8rem/1.4 $open-sans--light
            text-align center

    // HEADER SLIDER
    // ------------------------------------
    &__image
        position absolute
        bottom 0
        right 0
        z-index auto

        // header desktop image
        // --------------------------------------------------
        @media screen and ( min-resolution 96dpi )
            size( 105rem, 64.5rem )
            background url( '%=static=%assets/block-header/iphone-hand-desktop@1x.png' ) 0 0 no-repeat
            background-size cover

        @media screen and ( min-resolution 144dpi )
            size( 105rem, 64.5rem )
            background url( '%=static=%assets/block-header/iphone-hand-desktop@2x.png' ) 0 0 no-repeat
            background-size cover

        // header tablet image
        // --------------------------------------------------
        @media screen and ( max-width $tablet ) and ( min-resolution 96dpi )
            size( 70rem, 54.5rem )
            background url( '%=static=%assets/block-header/iphone-hand-tablet@1x.png' ) 0 0 no-repeat
            background-size cover

        @media screen and ( max-width $tablet ) and ( min-resolution 144dpi )
            size( 70rem, 54.5rem )
            background url( '%=static=%assets/block-header/iphone-hand-tablet@2x.png' ) 0 0 no-repeat
            background-size cover

        // header mobile image
        // --------------------------------------------------
        @media screen and ( max-width $mobile ) and ( min-resolution 96dpi )
            size( 25.8rem, 28.6rem )
            background url( '%=static=%assets/block-header/iphone-hand-mobile@1x.png' ) 0 0 no-repeat
            background-size cover

        @media screen and ( max-width $mobile ) and ( min-resolution 144dpi )
            size( 25.8rem, 28.6rem )
            background url( '%=static=%assets/block-header/iphone-hand-mobile@2x.png' ) 0 0 no-repeat
            background-size cover

        @media screen and ( max-width $mobile ) and ( min-resolution 288dpi )
            size( 25.8rem, 28.6rem )
            background url( '%=static=%assets/block-header/iphone-hand-mobile@3x.png' ) 0 0 no-repeat
            background-size cover
