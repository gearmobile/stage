.gallery
    background-color: $color-white


// GALLERY CONTROL
// -----------------------------------------

.gallery .gallery-control
    padding: 6rem 0
    display: flex
    justify-content: center

    &__item
        text-transform: capitalize
        font: 3rem/1 $josefin-sans-regular
        color: $color-dark
        margin: 0 2rem
        transition: color .2s
        will-change: color

        &:hover
            color: $color-red


// GALLERY CONTENT
// -----------------------------------------

.gallery-content
    border-top: 1px solid rgba(0, 0, 0, .75)

.gallery-content::before
.gallery-content::after
    content: ''
    display: table

.gallery-content::after
    clear: both

.gallery-content__sizer
.gallery-content__item
    float: left
    width: 33.33%
    height: 48rem
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    border-right: 1px solid rgba(0, 0, 0, .75)
    border-bottom: 1px solid rgba(0, 0, 0, .75)

.gallery-content .gallery-content__item:nth-child(3)
    background: url('%=static=%assets/gallery/product-image-08.jpg') 50% 50% no-repeat
    background-size: cover

.gallery-content__item a
    display: block
    width: 100%
    height: 100%
    padding: 4rem
    transition: background-color .2s
    will-change: background-color

    &:hover
        background-color: #f2f5f9

.gallery-content__item .gallery-image
    text-align: center
    margin: 0 0 4rem
    height: 26rem
    width: 100%

.gallery-content__item .gallery-info
    text-align: center

.gallery-content__item .gallery-category
    margin: 0 0 2rem
    text-transform: uppercase
    font: 1.2rem/1 $josefin-sans-bold
    letter-spacing: .2rem
    color: #a9a9a9

.gallery-content__item .gallery-title
    text-transform: capitalize
    color: $color-dark
    margin: 0 0 2rem
    font: 2.6rem/1 $josefin-sans-semibold

.gallery-content__item .gallery-price
    font: 2.2rem/1 $work-sans-bold
    color: $color-blue



















