.sidebar-panel {
    padding: 60px 0;
    text-align: center;
    min-height: 100%;
}

.sidebar-header {
    margin: 0 0 40px 0;
}

.sidebar-header .title {
    text-transform: capitalize;
    margin: 0;
    font: 700 26px/1 Helvetica, sans-serif;
}

.sidebar-menu__item {
    margin: 0 0 30px 0;
}

.sidebar-menu__item:last-child {
    margin-bottom: 0;
}

.sidebar-menu__item a {
    text-transform: capitalize;
    text-decoration: none;
    font: 400 18px/1 Arial, sans-serif;
    color: cadetblue;
}

.sidebar-menu__item a:hover {
    color: dodgerblue;
}
