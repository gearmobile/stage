
/* ----------------- MAIN RULES ----------------- */

.main {
    background: #ddd;
    margin: 6rem 0 0;
    padding: 60px 40px;
}

.main .title {
    margin: 0 0 40px;
    text-transform: uppercase;
    font: 700 28px/1 Helvetica, sans-serif;
}

.main article {
    margin: 0 0 40px 0;
    background-color: #fff;
}

.main article:last-child {
    margin-bottom: 0;
}

.main img {
    display: block;
    width: 100%;
    height: auto;
}

.main p {
    padding: 20px 40px;
    margin: 0;
    font: 400 16px/1.4 Arial, sans-serif;
    color: darkslategrey;
}

/* ------------- SWIPER SLIDER ----------------- */

.main .swiper-container {
    width: 100%;
    height: 100%;
}

.main .swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 300px
}

.main .swiper-slide:nth-child(1)
    background-color: goldenrod;

.main .swiper-slide:nth-child(2)
    background-color: mediumaquamarine;

.main .swiper-slide:nth-child(3)
    background-color: tomato;

.main .swiper-pagination {
    bottom: 5%;
    /*display: flex;*/
    /*flex-direction: column;*/
    /*align-items: flex-end;*/
    /*position: absolute;*/
    /*transform: translateY(50%);*/
}

.main .swiper-pagination .swiper-pagination-bullet {
    width: 20px;
    height: 20px;
    opacity: 1;
    background-color: palegreen;
    transition: background-color .2s;
    margin: 8px 16px 8px 0;
}

.main .swiper-pagination .swiper-pagination-bullet-active,
.main .swiper-pagination .swiper-pagination-bullet:hover {
    background-color: darkslategrey;
}
