.topheader {
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 6rem
    padding: 0 2rem
    display: flex
    align-items: center
    justify-content: space-between
    background-color: $color-dark
}

.topheader-title {
    color: $color-white
    font: 2.6rem/1 $josefin-sans-semibold
    letter-spacing: .2rem
    text-transform: uppercase
}

.topheader .topheader-icon,
.topheader .topheader-icon
    width: 2.4rem
    height: 2.4rem
    cursor: pointer
    color: $color-white
