.topheader {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 6rem;
    padding: 0 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: darkslategray;
}

.topheader .title {
    color: #fff;
    font: 700 3rem Helvetica, sans-serif;
    letter-spacing: .2rem;
    text-transform: capitalize;
    margin: 0;
}

.topheader .button {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    transition: background-color .2s;
}

.topheader .button-sidebar {
    background-color: orangered;
}

.topheader .button-sidebar:hover {
    background-color: darkorange;
}

.topheader .button-navbar {
    background-color: yellowgreen;
}

.topheader .button-navbar:hover {
    background-color: greenyellow;
}
