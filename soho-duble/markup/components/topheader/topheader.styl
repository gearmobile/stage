.topheader {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 6rem;
    padding: 0 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: darkslategray;
}

.topheader-title {
    color: $color-white
    font: 2.6rem/1 $josefin-sans-semibold
    letter-spacing: .2rem;
    text-transform: uppercase;
}

.topheader .button-sidebar,
.topheader .button-navbar {
    width: 3rem;
    height: 3rem;
    cursor: pointer;
}
