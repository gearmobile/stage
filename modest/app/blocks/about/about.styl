.about
	padding 8rem 0
	border-bottom .3rem solid #dde1e4

	&__center
		width $width
		margin auto
		padding 0 1rem

	&__content
		lost-center 100%
		color #8d8f92
		font-size 1rem
		line-height 1.6

	&__primary
		lost-column 7/12
		lost-column-gutter 2rem

		& p
			color #8d8f92
			font-size 1rem
			line-height 1.6
			margin-bottom 2rem

	&__secondary
		lost-column 5/12
