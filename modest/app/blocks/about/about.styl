.about
	padding 8rem 0
	border-bottom .3rem solid #dde1e4

	&__center
		lost-center $width
		padding 0 1rem

	&__content
		lost-center 100%
		color #8d8f92
		font-size 1rem
		line-height 1.6

	&__primary
		lost-column 7/12
		lost-column-gutter 2rem

		& p
			color #8d8f92
			font-size 1rem
			line-height 1.6
			margin-bottom 2rem

		+below($bp-786)
			lost-column 1/1
			lost-column-gutter 0
			margin-bottom 10%

		+below($bp-500)
			margin-bottom 18%

			& p
				text-align center

	&__secondary
		lost-column 5/12

		+below($bp-786)
			lost-column 1/1
			lost-column-gutter 0
