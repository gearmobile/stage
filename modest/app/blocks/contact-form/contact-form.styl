
// CONTACT-FORM
// --------------------------------------------

.contact-form
	background-color $color-white
	padding 3rem
	position absolute
	bottom 0
	left 0
	width 100%

	+below( $bp-786 )
		position static
		padding 0

	// CONTACT-FORM INPUT && TEXTAREA
	// ---------------------------------------

	& input
	& textarea
		display block
		border-radius .4rem
		border .1rem solid transparent
		width 100%
		background-color #eaeef1
		font-size 1.4rem
		color #8d8f92
		padding 1.2rem
		transition background-color .2s, border-color .2s

		&:hover
			border-color $color-grey

		&:focus
		&:active
			border-color $color-gray

	& textarea
		min-height 16rem

	// CONTACT-FORM LABEL
	// --------------------------------------

	& label
		display inline-block
		vertical-align middle
		text-transform uppercase
		text-indent .6rem
		color #8d8f92
		font-family $quattro-bold
		font-size 1.2rem
		margin-bottom 1rem

	// CONTACT-FORM ROW
	// ----------------------------------------

	&__row
		border none
		lost-center 100%

		&:not(:last-child)
			margin-bottom 3rem

		+below( $bp-500 )
			& .button-submit
				display block
				margin auto

		& .button-submit:hover
			background-color $color-gray
			border-color $color-gray

	// CONTACT-FORM HALF
	// ------------------------------------------

	&__half
		lost-column 6/12
		lost-column-gutter 1rem
		position relative

		& > .contact-form
			position absolute
			bottom 0
			right 0
			z-index 1

		+below( $bp-786 )
			lost-column 1/1
			lost-column-gutter 0

			&:not(:last-child)
				margin-bottom 3rem
