mixin team-card()

	// TEAM CARD WRAPPER
	ul.team-card__list

		// TEAM CARD ITEM
		li.team-card__item
			.team-card__image
				a(href="#{jv0}"): img(src="/assets/images/team-member-image-01.jpg", alt="Team Member")
				.team-card__overlay
					nav.team-card__contacts
						a(href="#{jv0}")
							svg(class="icon" role="img")
								use(id="twitter" xlink:href="/assets/images/icon.svg#icon_twitter")
						a(href="#{jv0}")
							svg(class="icon" role="img")
								use(id="facebook" xlink:href="/assets/images/icon.svg#icon_facebook")
						a(href="#{jv0}")
							svg(class="icon" role="img")
								use(id="facebook" xlink:href="/assets/images/icon.svg#icon_linkedin")
			// team card content
			.team-card__content
				h4.team-card__name elliot fu
