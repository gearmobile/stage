mixin topheader()
	.topheader
		.topheader__content
			h1.topheader__logo: a(href="#header" target="_blank" rel="nofollow") modest
			nav.topheader__menu
				a.topheader__link(href="#home") home
				a.topheader__link(href="#about") about
				a.topheader__link(href="#team") team
				a.topheader__link(href="#work") work
				a.topheader__link(href="#services") services
				a.topheader__link(href="#features") features
				a.topheader__link(href="#contact") contact
			a.topheader__icon(href="#{jv0}")
				span
			nav.topheader__menu--mobile
				a(href="#home") home
				a(href="#about") about
				a(href="#team") team
				a(href="#work") work
				a(href="#services") services
				a(href="#features") features
				a(href="#contact") contact
