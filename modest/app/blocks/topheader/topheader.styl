.topheader
	padding 2rem 0
	background-color #1d2126
	position absolute
	left 0
	top 0
	width 100%
	z-index 9
	transition all .2s
	position fixed

	&--fixed
		padding 1.4rem 0
		z-index 10

	&__content
		lost-center $width flex
		padding 0 1rem
		justify-content space-between
		align-items center

		+below($bp-786)
			padding 0 4rem

	&__logo
		size(10rem, 2rem)
		background url(../images/modest-logo.png) 50% 50% no-repeat
		background-size 99%

		& > a
			display block
			width inherit
			height inherit
			squish-text()

	&__menu
		display flex
		justify-content space-between

		& > a
			display block
			margin 0 1rem
			padding .8rem 1.2rem
			text-transform uppercase
			font-family $sans-semibold
			font-size .875rem
			color $color-grey
			border .1rem solid transparent
			border-radius .1rem

			&:first-child
				margin-left 0

			&:last-child
				margin-right 0

			&:hover
				border-color $color-grey

			&:active
			&.is-active
				color $color-blue
				border-color $color-blue

		+below($bp-786)
			display none


	// HEADER MOBILE ICON
	// ------------------------------------------

	&__icon
		size(3rem)
		position relative
		display none

		& > span
			position relative
			margin 0 auto
			top 1.2rem
			width 3rem
			height .6rem
			background-color $color-white
			display block
			transition-duration 0s
			transition-delay .2s

			&::before
			&::after
				content ''
				position absolute
				width 3rem
				height .6rem
				background-color $color-white
				display block
				transition-property margin, transform
				transition-duration .2s
				transition-delay .2s, 0s

			&::before
				margin-top -1.2rem

			&::after
				margin-top 1.2rem

		&.is-active > span
			background-color rgba($color-black, .0)
			transition-delay .2s

			&:before
				margin-top 0
				transform rotate(45deg)
				transition-delay 0s, .2s

			&:after
				margin-top 0
				transform rotate(-45deg)
				transition-delay 0s, .2s

		+below($bp-786)
			display block


// MOBILE MENU
// -------------------------------------------------

.topheader__menu--mobile
	position fixed
	left 0
	width 100%
	opacity 0
	visibility hidden
	transition opacity .4s, visibility .4s
	z-index 1

	& > a
		display block
		padding 3rem 0
		text-align center
		background-color $color-grey
		color $color-white
		text-transform capitalize
		font-family $sans-bold
		font-size 2rem
		border-bottom 1px solid #1d2126
		transition background-color .2s, color .2s

		&:hover
			background-color darken($color-grey, 60%)
			color $color-blue

	&.is-visible
		opacity 1
		visibility visible
