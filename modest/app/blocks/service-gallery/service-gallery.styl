.service-gallery
	lost-center 100%

	&__item
		lost-column 3/12
		lost-column-cycle 4
		lost-column-gutter 2rem
		padding 0 1rem
		text-align center
		font-size 1rem

		&:nth-child(-n+4)
			margin-bottom 9rem

		& > .icon
			size(4rem)
			margin-bottom 3.5rem

		& > p
			color #8d8f92
			line-height 1.8

	&__title
		text-transform uppercase
		color #292f36
		font-family $quattro-bold
		margin-bottom 2rem
