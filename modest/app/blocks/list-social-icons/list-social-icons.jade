mixin list-social-icons()
	nav.list-social-icons
		a(href="#{jv0}" title="Facebook" target="_blank" rel="nofollow")
			svg(class="icon" role="img")
				use(id="facebook" xlink:href="/assets/images/icon.svg#icon_facebook")
		a(href="#{jv0}" title="Twitter" target="_blank" rel="nofollow")
			svg(class="icon" role="img")
				use(id="twitter" xlink:href="/assets/images/icon.svg#icon_twitter")
		a(href="#{jv0}" title="Google" target="_blank" rel="nofollow")
			svg(class="icon" role="img")
				use(id="google" xlink:href="/assets/images/icon.svg#icon_google")
		a(href="#{jv0}" title="Dribbble" target="_blank" rel="nofollow")
			svg(class="icon" role="img")
				use(id="dribbble" xlink:href="/assets/images/icon.svg#icon_dribbble")
		a(href="#{jv0}" title="Tumblr" target="_blank" rel="nofollow")
			svg(class="icon" role="img")
				use(id="tumblr" xlink:href="/assets/images/icon.svg#icon_tumblr")
