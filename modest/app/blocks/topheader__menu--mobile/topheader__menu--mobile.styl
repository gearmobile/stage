.topheader__menu--mobile
	position fixed
	left 0
	width 100%
	opacity 0
	visibility hidden
	transition opacity .4s, visibility .4s
	z-index 1

	& > a
		display block
		display flex
		justify-content center
		align-items center
		background-color $color-grey
		color $color-white
		text-transform capitalize
		font-family $sans-bold
		font-size 2rem
		border-bottom 1px solid #1d2126
		transition background-color .2s, color .2s

		&:hover
			background-color darken($color-grey, 60%)
			color $color-blue

	&.is-visible
		opacity 1
		visibility visible
