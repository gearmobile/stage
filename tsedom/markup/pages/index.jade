doctype html
html(class="no-js", lang="ru")

    include ../components/head/head
    include ../components/block-topheader/block-topheader
    include ../components/block-header/block-header
    include ../components/block-about/block-about
    include ../components/block-team/block-team
    include ../components/block-work/block-work
    include ../components/block-services/block-services
    include ../components/block-features/block-features
    include ../components/block-contact/block-contact
    include ../components/block-top-button/block-top-button
    include ../components/footer/footer

    head
        +head(head.defaults)
    body.page
        |%=symbols=%
        //- +block-topheader()
        section.page__wrapper

            +block-header()
            +block-about()
            +block-team()
            +block-work()
            +block-services()
            +block-features()
            +block-contact()
            +block-top-button()

            .page__buffer

        .page__footer
            +footer()

        script(src='%=static=%js/separate-js/svg4everybody.min.js')
        script svg4everybody();

        //- Main scripts. You can replace it, but I recommend you to leave it here
        script(src='%=static=%js/main%=hash=%%=min=%.js')
