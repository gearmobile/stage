.navigation
    height: 14rem
    display: flex
    align-items: center
    justify-content: center

    &__item
        margin: 0 1.4rem
        padding: 0 0 .6rem 0

        &:first-child
            border-bottom: .2rem solid $color-red

    &__link
        text-transform: capitalize
        color: $color-dark
        font: 3rem/1 $josefin-sans-regular

        &:hover
            color: $color-red
