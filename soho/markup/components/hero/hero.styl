.hero
    margin: 6rem 0 0

    & .slider
        lost-center $width
        padding: 0 $gutter

        & .slider__item
            width: 100%
            height: 70rem

        & .slider__content
            position: absolute
            top: 50%
            left: 0
            transform: translateY(-50%)

            & .title
                font: 4rem/1 $josefin-sans-bold
                color: $color-dark
                margin: 0 0 2rem

        & .slider__image
            /*position: absolute*/
            /*right: 0*/

        & .slider__data
            display: flex
            align-items: center

            & .price
                font: 3rem/1 $work-sans-bold
                color: $color-blue
                margin: 0 2rem 0 0

            & .buy
                font: 2rem/1 $work-sans-semibold
                color: $color-red
                text-decoration: underline
                text-transform: capitalize

                &:hover
                    text-decoration: none

        & .flickity-page-dots
            display: flex

        & .flickity-page-dots .dot
            width: 1.2rem
            height: 1.2rem
            margin: 0 1rem
            background-color: rgba(0, 0, 0, 0.2)
            opacity: 1

        & .flickity-page-dots .dot.is-selected
        & .flickity-page-dots .dot:hover
            background-color: $color-red
