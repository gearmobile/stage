.follow
    padding: 16rem 0
    background: url('%=static=%assets/block-follow/follow-bg.jpg') 50% 50% no-repeat
    background-size: cover
    position: relative

    &::before
    &::after
        content: ''
        display: block
        background-color: $color-white
        width: 100%
        height: 16rem
        left: 0
        position: absolute

    &::before
        top: 0

    &::after
        bottom: 0

    // FOLLOW CENTER
    // ------------------------------------------

    &__center
        lost-center $width flex
        padding: 7rem 1rem

    // FOLLOW SWIPER SLIDER
    // ------------------------------------------

    & .swiper-container
        width: 100%
        height: 100%

    & .swiper-slide
        display: flex
        flex-direction: column
        align-items: center
        justify-content: center
        color: $color-white

    & .swiper-pagination
        bottom: 6rem
        display: flex
        justify-content: center

        @media screen and ( max-width: $bp500 )
            display: none

    & .swiper-pagination-bullet
        width: 1rem
        height: 1rem
        opacity: 1
        background-color: #ccc
        margin: .3rem

    & .swiper-pagination-bullet-active
        background-color: $color-grey-light-dark


    // FOLLOW HEADER
    // ------------------------------------------

    & .follow__header
        margin: 0 0 8rem

    & .follow__icon
        width: 9rem
        height: 9rem

        @media screen and ( max-width: $bp500 )
            width: 7rem
            height: 7rem


    // FOLLOW MAIN
    // ------------------------------------------

    & .follow__main
        lost-center: 80rem flex
        font: 1.8rem/1.6 $lato-regular
        text-align: center
        margin: 0 0 7rem

        @media screen and ( max-width: $bp500 )
            font-size 1.6rem
            margin 0


    // FOLLOW FOOTER
    // ------------------------------------------

    & .follow__footer
        padding: 3rem 0 0 0
        font: 1.8rem/1.6 $lato-regular

        @media screen and ( max-width: $bp500 )
            font-size 1.6rem

        & a
            color: $color-blue
            transition: color .2s

            &:hover
            &:active
                color: $color-orange
