.testimonials
    padding: 9rem 0 19rem
    background-color: $color-white

    &__center
        lost-center $width flex
        padding: 0 $gutter
        flex-direction: column


    // TESTIMONIALS HEADER
    // ---------------------------------------------

    &__header
        margin: 0 0 12rem


    // TESTIMONIALS CONTENT
    // ---------------------------------------------

    &__content
        width: 100%


    // TESTIMONIALS CONTENT CLIENTS
    // ---------------------------------------------

    &__labels
        width: 100%
        flex-wrap: wrap
        display: flex
        justify-content: center
        align-items: center
        margin: 0 0 5rem

    &__client
        display: flex
        justify-content: center
        align-items: center
        flex: 0 1 18%
        margin: 1%
        height: 8rem


    // TESTIMONIALS CONTENT SLIDER
    // ---------------------------------------------

    & .swiper-container
        width: 100%
        height: 100%
        padding: 0 0 8rem

        @media screen and ( max-width: $bp500 )
            padding 0

    & .swiper-slide
        display: flex
        flex-direction: column
        background-color: $color-grey-grey
        border-radius: .4rem
        border: .1rem solid #efefef
        height: 20rem
        padding: 2rem 1rem

    & .swiper-slide__header
        height: 60%
        width: 100%
        border-bottom: .2rem solid #cacaca

        & > blockquote
            color: $color-grey-light-dark
            font: italic 1.6rem/1.4 $lato-regular
            quotes: '\201c' '\201d'

            &::before
                content: open-quote

            &::after
                content: close-quote

            @media screen and ( max-width: $bp768 )
                text-align: center

    & .swiper-slide__footer
        width: 100%
        height: 40%
        padding: 1.6rem 0 0 0

    & .swiper-slide__info
        display: flex

    & .swiper-slide__image
        margin: 0 1rem 0 0

    & .swiper-slide__contacts
        padding: .8rem 0 0

    & .swiper-slide__title
        margin: 0 0 .5rem

        & > a
            color: $color-blue
            font: 1.4rem/1.2 $lato-regular
            transition: color .2s

            &:hover
                color: $color-orange

    & .swiper-slide__author
        text-transform: capitalize
        font: 1.2rem/1.2 $lato-regular
        color: $color-grey-light-dark

    & .swiper-pagination
        display: flex
        justify-content: center
        bottom: 0

        @media screen and ( max-width: $bp500 )
            display: none

    & .swiper-pagination-bullet
        width: 1rem
        height: 1rem
        opacity: 1
        background-color: #ccc
        margin: 0 .3rem

    & .swiper-pagination-bullet-active
        background-color: $color-grey-light-dark



















