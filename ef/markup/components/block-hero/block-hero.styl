.hero
    height: 100rem
    width: 100%
    background: url('%=static=%assets/block-hero/hero-bg.jpg') 50% 50% no-repeat
    background-size: cover
    position: relative

    &::before
        content: ''
        display: block
        width: 100%
        height: 100%
        position: absolute
        top: 0
        left: 0
        background: url('%=static=%assets/block-hero/hero-overlay.png') 0 0 repeat
        opacity: .6

    &::after
        content: ''
        display: block
        width: 100%
        height: 16rem
        left: 0
        bottom: 0
        position: absolute
        background: #0000f0;
        background: -moz-linear-gradient( $angle, $color1 0%, $color1 50%, $color2 50%, $color2 100% );
        background: -webkit-linear-gradient( $angle, $color1 0%, $color1 50%, $color2 50%, $color2 100% );
        background: linear-gradient( $angle, $color1 0%, $color1 50%, $color2 50%, $color2 100% );
        backface-visibility: hidden // ?



    // HERO CENTER
    // ------------------------------------------

    &__center
        lost-center $width flex
        padding: 0 $gutter
        height: 100rem
        flex-direction: column
        justify-content: center
        align-items: center

        &::after
            content: ''
            display: block
            width: 627px
            height: 147px
            position: absolute
            right: 0
            bottom: 3px
            z-index: 1
            background: url('%=static=%assets/block-hero/triangle.png') no-repeat


    // HERO TITLE
    // ------------------------------------------

    &__title
        text-transform: uppercase
        font: 2.2rem/1 $lato-bold
        margin: 0 0 4rem 4rem

        @media screen and ( max-width: $bp600 )
            font-size: 1.6rem


    // HERO LOGO
    // ------------------------------------------

    &__logo
        width: 19rem
        height: 19rem
        margin: 0 0 8rem
        background: url('%=static=%assets/block-hero/hero-logo.png') 50% 50% no-repeat
        background-size: cover

        @media screen and ( max-width: $bp600 )
            width: 14rem
            height: 14rem


    // HERO SUBTITLE
    // ------------------------------------------

    &__subtitle
        lost-center 70rem flex
        font: 2.2rem/1.4 $lato-regular
        text-align: center
        margin: 0 0 13rem

        @media screen and ( max-width: $bp600 )
            font-size: 1.6rem


    // HERO BUTTON
    // ------------------------------------------

    &__button
        width: 4rem
        height: 6rem
        border: .2rem solid $color-white
        border-radius: 50em
        cursor: pointer
        position: relative

        &::before
            content: ''
            display: block
            width: 1rem
            height: 2rem
            border: .2rem solid $color-white
            border-radius: 50em
            position: absolute
            left: 50%
            transform: translateX(-50%)
            top: 1rem


































