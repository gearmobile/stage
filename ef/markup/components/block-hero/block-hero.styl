.hero
    height: 100rem
    width: 100%
    background: url('%=static=%assets/block-hero/hero-bg.jpg') 50% 50% no-repeat
    background-size: cover
    position: relative

    &::before
        content: ''
        display: block
        width: 100%
        height: 100%
        position: absolute
        top: 0
        left: 0
        background: url('%=static=%assets/block-hero/hero-overlay.png') 0 0 repeat
        opacity: .6


    // HERO CENTER
    // ------------------------------------------

    &__center
        lost-center $width flex
        padding: 0 $gutter
        height: 100rem
        flex-direction: column
        justify-content: center
        align-items: center


    // HERO TITLE
    // ------------------------------------------

    &__title
        text-transform: uppercase
        font: 2.2rem/1 $lato-bold
        margin: 0 0 4rem 4rem

        @media screen and ( max-width: $bp600 )
            font-size: 1.6rem


    // HERO LOGO
    // ------------------------------------------

    &__logo
        margin: 0 0 8rem

        @media screen and ( max-width: $bp600 )

            & .hero-icon
                width: 16rem
                height: auto


    // HERO SUBTITLE
    // ------------------------------------------

    &__subtitle
        lost-center 70rem flex
        font: 2.2rem/1.4 $lato-regular
        text-align: center
        margin: 0 0 13rem

        @media screen and ( max-width: $bp600 )
            font-size: 1.6rem


    // HERO BUTTON
    // ------------------------------------------

    &__button
        width: 4rem
        height: 6rem
        border: .2rem solid $color-white
        border-radius: 50em
        cursor: pointer
        position: relative

        &::before
            content: ''
            display: block
            width: 1rem
            height: 2rem
            border: .2rem solid $color-white
            border-radius: 50em
            position: absolute
            left: 50%
            transform: translateX(-50%)
            top: 1rem


































