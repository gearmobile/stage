.header
	color $color-white
	background $color-white url(../images/header-bg.jpg) center center no-repeat
	background-size cover

	&__center
		position relative
		margin auto
		display flex
		flex-direction column
		width $width
		min-height 90rem
		justify-content center
		align-items center

		& > .logo-large
			margin-bottom 2.5rem

		& > p
			padding 0 10rem
			font-family $varela-regular
			font-size 1.4rem
			line-height 1.6
			text-align center
			text-transform uppercase

	&__title
		margin-bottom 3rem
		font-family $opensans-bold
		font-size 4rem
		text-transform uppercase

	&__link
		position relative
		margin-bottom 5rem
		padding-bottom 1rem
		font-family $opensans-light
		font-size 1.8rem
		text-transform uppercase
		color $color-white

		&::before
			position absolute
			left 0
			bottom 0
			display block
			width 100%
			height .1rem
			content ''
			background-color $color-white

	&__subtitle
		margin-bottom 5rem
		font-family $varela-regular
		font-size 3rem
		text-transform capitalize
