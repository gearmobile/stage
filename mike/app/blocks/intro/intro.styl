.intro
	padding 10rem 0
	background-color $color-white

	&__center
		margin auto
		padding 0 1rem
		width $width
		text-align center

	&__title
		margin-bottom 1.6rem
		font-family $varela-regular
		font-size 3.2rem
		text-transform uppercase
		color $color-blue

	&__subtitle
		position relative
		padding 0 2rem
		display inline-block
		font-family $varela-regular
		text-transform uppercase
		color $color-grey
		background-color $color-white

		&::before
			position absolute
			top 50%
			left 50%
			display block
			width 120%
			height .1rem
			content ''
			background-color $color-grey
			transform translate(-50%, -50%)
