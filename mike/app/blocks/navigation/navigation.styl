.navigation
	background-color $color-blue

	&__center
		margin auto
		display flex
		width $width
		justify-content space-between
		align-items center

	&__logo
		position relative
		padding-right .8rem
		font-family $opensans-bold
		font-size 2.6rem
		text-transform uppercase
		color $color-white

		&::after
			position absolute
			top 50%
			right 0
			display block
			width 0
			height 0
			content ''
			border-width 6px 5px 6px 0
			border-style solid
			border-color transparent $color-white transparent transparent
			transform translateY(-50%)

	&__menu
		display flex
		align-items center

		& > a
			padding 2.8rem .8rem 2.4rem .8rem
			display block
			font-family $opensans-semibold
			font-size 1.3rem
			text-transform uppercase
			color $color-white
			border-bottom .3rem solid transparent

			&:first-child
				border-bottom-color $color-white
