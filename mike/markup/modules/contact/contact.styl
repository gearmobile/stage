.contact
    background-color: $color-white
    padding: 10rem 0 9rem

    &__title
        font-family: $varela-regular
        font-weight: 400
        color: $color-blue
        text-transform: uppercase
        font-size: 3.2rem
        line-height: 1.2
        margin: 0 0 2rem 0

        & > span
            text-transform: lowercase

    &__slogan
        padding: 0 2rem
        margin: 0 0 8rem 0
        text-transform: uppercase
        font-family: $varela-regular
        font-size: 1.6rem
        font-weight: 400
        line-height: 1.4
        color: #666666
        position: relative
        background-color: $color-white
        z-index: 2

        &::before
            content: ''
            display: block
            background-color: #666666
            height: 1px
            width: 120%
            position: absolute
            top: 50%
            left: 50%
            transform: translate(-50%, -50%);
            z-index: 1

    &__subtitle
        font-family: $opensans-bold
        font-weight: 700
        text-transform: uppercase
        color: $color-black
        font-size: 1.7rem
        line-height: 1.2
        padding: 0 0 2rem 0
        position: relative

        &::after
            content: ''
            display: block
            height: 1px
            width: 4rem
            background-color: #bbbbbb
            position: absolute
            bottom: 0
            left: 50%
            transform: translateX(-50%)

    &__center
        lost-center $width
        padding: 0 1rem
        flex-direction: column
        justify-content: center
        align-items: center

        & .form
            width: 100%
            margin: 6rem 0 0 0

            &__row
                lost-center: 100%

                &:not(:last-child)
                    margin: 0 0 4rem 0

                & input
                & textarea
                    border-width: 0 0 1px 0
                    border-style: solid
                    border-color: transparent transparent #ddd transparent
                    background-color: transparent
                    transition: border-color .2s

                    &:hover
                    &:focus
                        border-color: $color-blue


                & input
                    lost-column: 1/3
                    padding: 15px 7px
                    text-transform: uppercase

                & textarea
                    width: 100%
                    height: 100px
                    resize: none

                & button
                    width: 100%
                    border: 1px solid #ddd
                    background-color: transparent
                    padding: 17px 21px
                    font-size: 1.4rem
                    font-family: $varela-regular
                    color: $color-black
                    text-transform: uppercase

                    &:hover
                    &:focus
                        border-color: $color-blue
