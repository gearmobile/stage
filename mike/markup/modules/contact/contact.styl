.contact
  background-color: $color-white
  padding: 10rem 0

  &__title
    font: 400 3rem/1.2 $varela-regular
    text-transform: uppercase
    text-align: center
    color: $color-blue
    margin: 0 0 2rem 0

    & > span
      text-transform: lowercase

    @media screen and (max-width: $bp500)
      font-size: 2.5rem

  &__slogan
    margin: 0 0 8rem 0
    font: 400 1.6rem/1.2 $varela-regular
    letter-spacing: .2rem
    color: $color-grey
    text-transform: uppercase
    text-align: center

    display: block
    overflow: hidden

    &::before
    &::after
      content: ''
      display: inline-block
      vertical-align: middle
      position: relative
      width: 2%
      border-top-style: solid
      border-top-width: .1rem
      border-top-color: inherit

    &::before
      right: .5rem
      margin-left: -50%

    &::after
      left: .5rem
      margin-right: -50%

    @media screen and (max-width: $bp500)
      font-size: 1.4rem
      letter-spacing: normal

    @media screen and (max-width: $bp500)
      //font-size: 1.2rem

  &__subtitle
    font: 600 1.6rem/1.2 $opensans-regular
    color: $color-black
    text-transform: uppercase
    text-align: center
    padding: 0 0 2rem 0
    position: relative

    &::after
      content: ''
      display: block
      height: 1px
      width: 6rem
      background-color: #bbb
      position: absolute
      bottom: 0
      left: 50%
      transform: translateX(-50%)

    @media screen and (max-width: $bp500)
      font-size: 1.5rem

  &__center
    lost-center $width no-flex
    padding: 0 1rem

    @media screen and (max-width: $bp768)
      padding: 0 2rem

    & .form
      width: 100%
      margin: 6rem 0 0 0

      &__row
        lost-center: 100%

        &:not(:last-child)
          margin: 0 0 4rem 0

        & input
        & textarea
        & button
          font: 400 1.6rem/1.2 $varela-regular
          text-transform: uppercase

        & input
        & textarea
          padding: 1.8rem 1rem
          border-width: 0 0 .1rem 0
          border-style: solid
          border-color: transparent transparent #ddd transparent
          background-color: transparent
          transition: border-color .2s
          color: $color-grey

          &:hover
          &:focus
            border-color: $color-blue

        & input
          lost-column: 1/3

          @media screen and (max-width: $bp768)
            lost-column: 1/1

            &:not(:last-child)
              margin-bottom: 4rem

        & textarea
          width: 100%
          height: 14rem
          resize: none

        & button
          width: 100%
          border: .1rem solid #ddd
          background-color: transparent
          padding: 1.6rem 2rem
          color: $color-black

          &:hover
          &:focus
            border-color: $color-blue

