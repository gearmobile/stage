.clients
  padding: 8rem 0

  &__center
    lost-center $width no-flex

  &__title
    text-align: center
    text-transform: capitalize
    font: 300 3rem/1.2 $opensans-light
    color: $color-black
    padding: 0 0 3rem 0
    margin: 0 0 5rem 0
    position: relative

    &::after
      content: ''
      display: block
      height: .1rem
      width: 5rem
      background-color: #bbb
      position: absolute
      bottom: 0
      left: 50%
      transform: translateX(-50%)

    @media screen and (max-width: $bp500)
      font-size: 2rem

  &__gallery
    lost-center 100% flex
    margin-bottom: 5rem
    padding: 0 1rem

  &__item
    lost-column 1/6
    lost-column-gutter 2rem
    height: 7rem
    background-color: $color-grey-light

    @media screen and (max-width: $bp980)
      lost-column 1/3

      &:nth-child(-n+3)
        margin-bottom: 2rem

  &__subtitle
    margin: auto
    max-width: 80rem
    padding: 0 1rem
    font: 300 1.4rem/1.6 $opensans-light
    color: #868686
    text-align: center

    @media screen and (max-width: $bp500)
      font-size: 1.3rem
      padding: 0 2rem