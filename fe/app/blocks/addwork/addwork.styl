.addwork
	background-color #f7f7f7
	padding 13rem 0 14rem

	&__center
		lost-center $width

	&__title
		font-size 2.4rem
		font-family $lato-black
		color #666
		text-transform uppercase
		text-align center
		margin-bottom 2.5rem

	&__subtitle
		font-size 2.4rem
		color #333
		text-align center
		margin-bottom 9rem


// ADDWORK GALLERY
// --------------------------------------------------

.addwork-gallery
	lost-center 100rem
	padding 0 1rem


	// GALLERY CONTROLS
	// -----------------------------------------------

	& .controls
		text-align center
		font-size 0
		margin-bottom 7rem

		&__item
			display inline-block
			vertical-align top
			border 1px solid #666
			border-radius .2rem
			padding 1rem 2rem
			margin 0 .25rem

			font-size 1.4rem
			text-decoration none
			text-transform capitalize
			color #666
			transition background-color .2s

			&:hover
			&:active
			&--active
				background-color #f1f1f1

			&:focus
			&:active
				outline none


	// GALLERY CONTENT
	// ------------------------------------------------

	& .content
		overflow hidden

		&__holder
			display none

			&--active
				display block

		&__wrapper
			lost-utility clearfix
			margin-bottom 4rem

		&__item
			lost-column 4/12 3 2rem
			text-align center
			padding 0 0 2rem

			+below(850px)
				lost-column 6/12
				lost-column-cycle 2
				lost-gutter 2rem

			+below(500px)
				lost-column 1/1
				lost-column-cycle none
				lost-gutter 0

				&:not(:last-child)
					margin-bottom 2rem

		&__image
			position relative
			z-index 2
			overflow hidden
			margin-bottom 3rem

			& > img
				display block
				width 100%
				height auto
				position relative
				z-index 1
				transform scale(1)
				transition transform .5s

			&::before
				content ''
				display block
				position absolute
				top 0
				left 0
				width auto
				height auto
				min-width 100%
				min-height 100%
				z-index 3
				transition background-color .2s

			&:hover::before
				background-color rgba(#000, .8)

			&:hover > img
				transform scale(1.05)

		&__links
			position absolute
			width 100%
			top 50%
			left 50%
			transform translate(-50%, -50%)
			text-align center
			font-size 0
			z-index 4

		&__icon
			display inline-block
			vertical-align middle
			margin 0 1rem
			size(2rem)
			font-size 1.6rem
			background-position center center
			background-repeat no-repeat
			background-size cover

			&:nth-child(1)
				background-image url('data:image/svg+xml;base64,')

			&:hover:nth-child(1)
			&:active:nth-child(1)
				background-image url('data:image/svg+xml;base64,')

			&:nth-child(2)
				background-image url('data:image/svg+xml;base64,')

			&:hover:nth-child(2)
			&:active:nth-child(2)
				background-image url('data:image/svg+xml;base64,')

		&__title
			font-family $lato-bold
			margin-bottom 1.3rem
			color #333
			text-transform capitalize

		&__subtitle
			font-size 1.4rem
			line-height 1.2
			color #333
			margin-bottom 5rem

		&__button
			display block
			margin auto
			border none
			padding 1.2rem 3rem 1rem
			text-transform uppercase
			background-color #0cf
			color $white
			font-size 1.4rem
			transition background-color .2s
			line-height 1
			font-family $lato-bold

			&:hover
			&:focus
			&:active
				background-color saturate(#0cf, 20%)
