.touch
	background-color $white
	position relative
	padding 16rem 0

	&__center
		lost-center $width

		& > .heading
			margin-bottom 17rem
			padding 0 1rem

	&::before
		content ''
		display block
		width 100%
		height 16rem
		position absolute
		top 0
		left 0
		transform-origin 0 0
		transform skewY(-4.7deg)
		background linear-gradient(8deg, $white 0%, $white 76%, $blue 76%, $blue 100%)


// TOUCH FORM
// ----------------------------------------------

.form
	padding 0 1rem
	lost-utility clearfix

	& p
		color #666
		line-height 1.4

	& input
	& textarea
		color #ccc
		text-transform capitalize
		padding 1.9rem 2rem 1.8rem 2rem
		border .1rem solid #ccc
		border-radius .3rem
		transition border-color .2s

		+placeholder()
			color #ccc
			text-transform capitalize

		&:hover
		&:focus
			border-color darken(#ccc, 20%)



	// LEFT PART OF FORM
	// ----------------------------------------------

	&__left
		lost-column 7/12
		lost-column-gutter 2rem

	&__row
		border none
		clearfix()

		&:nth-child(-n+2)
			margin-bottom 1.2rem

		&:nth-child(3)
			margin-bottom 1.4rem

	&__name
	&__email
		width 49%
		float left

	&__name
		margin-right 2%

	&__subject
	&__message
		width 100%

	&__message
		min-height 16rem

	&__button
		width 15rem
		height 5rem
		border-radius .4rem
		border none
		background-color $blue
		color $white
		text-transform capitalize
		transition background-color .2s
		font-weight 700

		&:hover
		&:active
		&:focus
			background-color darken($blue, 10%)


	// RIGHT PART OF FORM
	// ----------------------------------------------

	&__right
		lost-column 5/12 2rem

	&__title
		color #333
		font-weight 700
		text-transform uppercase
		margin-bottom 2rem

	&__contacts
		margin-top 4rem

		& > li
			padding-left 4.5rem
			color #666
			line-height 2.5rem
			position relative

			&:not(:last-child)
				margin-bottom 2rem

			&::before
				content ''
				display block
				width 2.5rem
				height 2rem
				position absolute
				left 0
				top 50%
				transform translateY(-50%)
				background-position center center
				background-repeat no-repeat
				background-size 70%

			&:nth-child(1)::before
				background-image url('data:image/png;base64,')
				background-size 60%

			&:nth-child(2)::before
				background-image url('data:image/png;base64,')

			&:nth-child(3)::before
				background-image url('data:image/png;base64,')

			&:nth-child(4)::before
				background-image url('data:image/png;base64,')

			& > a
				text-decoration none
				color #666

				&:hover
				&:active
					color darken(#666, 30%)


// MEDIA QUERIES
// ------------------------------------------------------------

+below(980px)

	.form__left
	.form__right
		lost-column 1/1

	.form__left
		margin-bottom 6rem

	.form__title
		text-align center

	.form__right > p
		padding 0 1rem


+below(600px)

	.form__name
	.form__email
		width 100%
		float none
		margin 0

	.form__name
	.form__left > .form__row
		margin-bottom 2rem

	.form__button
		display block
		margin auto
