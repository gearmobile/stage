.work
	background-color $white
	padding 18rem 0 3rem

	&__center
		lost-center $width
		margin-bottom 13rem

.showcase
	padding 0 .3rem

	&__wrapper
		margin-left -4rem
		font-size 0

	&__item
		display inline-block
		vertical-align top
		font-size 1.6rem
		background-color #333
		margin 0 0 4rem 4rem
		width calc(100% / 3 - 4rem)
		padding-bottom 25%
		position relative
		overflow hidden

		&--wide
			width calc( 100% / 3 * 2 - 4rem)

		&:nth-child(n+4)
			margin-bottom 0

		&:nth-child(1) .showcase__image
			background-image url(../images/showcase-image-1.jpg)

		&:nth-child(2) .showcase__image
			background-image url(../images/showcase-image-2.jpg)

		&:nth-child(3) .showcase__image
			background-image url(../images/showcase-image-3.jpg)

		&:nth-child(4) .showcase__image
			background-image url(../images/showcase-image-4.jpg)

		&:nth-child(5) .showcase__image
			background-image url(../images/showcase-image-5.jpg)

		&:hover .showcase__image
		&:active .showcase__image
			transform scale(1.05)

		&:hover .showcase__image::before
		&:active .showcase__image::before
			background-color rgba(255, 255, 255, 0)

	&__image
		position absolute
		top 0
		left 0
		width auto
		height auto
		min-width 100%
		min-height 100%
		background-position center center
		background-repeat no-repeat
		background-size cover
		transform scale(1)
		transition transform 1s

		&::before
			content ''
			display block
			position absolute
			top 0
			left 0
			width auto
			height auto
			min-width 100%
			min-height 100%
			background-color rgba(255, 255, 255, .3)
			transition background-color .5s

	&__content
		width 100%
		text-align center
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		color #333

	&__title
		font-size 4.8rem
		font-weight 300
		text-transform capitalize
		margin-bottom 3rem

	&__subtitle
		display block
		font-size 2.4rem
		font-weight 400
		line-height 1.2
		margin-bottom 4rem

	&__button
		display inline-block
		vertical-align middle
		text-transform lowercase
		text-decoration none
		font-size 3rem
		color #333
		border 4px solid #333
		padding 1.7rem 6.4rem
		transition background-color .2s

		&:hover
		&:active
			background-color rgba(0, 0, 0, .1)
