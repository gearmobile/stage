.gallery
	lost-center 100%
	margin 10rem 0 0 0
	padding 0 1rem

	&__item
		lost-column 3/12
		lost-column-gutter 2rem
		text-align center

		+below(980px)
			lost-column 6/12
			lost-column-gutter 4rem
			lost-column-cycle 2
			padding 0 1rem

			&:nth-child(-n+2)
				margin-bottom 8rem

		+below(650px)
			lost-column 1/1
			lost-column-gutter 0
			lost-column-cycle 0

			&:not(:last-child)
				margin-bottom 10rem

	&__image
		size(17.8rem)
		border-radius 50%
		margin 0 auto 3.6rem
		cursor pointer
		position relative

		&::before
			content ''
			display block
			width 100%
			height 100%
			border-radius 50%
			position absolute
			top 0
			left 0
			z-index 1
			transition background-color .2s

		&:hover::before
			background-color rgba($black, .9)

		& > img
			display block
			width 100%
			height auto
			border-radius 50%

	&__title
		color $white
		font-size 2rem
		font-family $lato-bold
		text-transform uppercase
		margin-bottom .7rem

	&__subtitle
		color #00e4ff
		font-size 1.2rem
		text-transform capitalize
		margin-bottom 1.8rem

	&__text
		color $white
		font-size 1.2rem
		line-height 1.4
