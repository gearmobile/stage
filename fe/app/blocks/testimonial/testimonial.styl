
.testimonial
	background-color $white
	position relative
	padding 12.5rem 0 18rem

	&__center
		lost-center $width

		& > .heading
			margin-bottom 12rem
			padding 0 1rem

	&::before
		content ''
		display block
		width 100%
		height 16rem
		position absolute
		top 0
		left 0
		transform-origin 0 0
		transform skewY(-4.7deg)
		background linear-gradient(8deg, $white 0%, $white 76%, $blue 76%, $blue 100%)

	&__clients
		display flex
		justify-content space-around
		align-items center
		margin-bottom 6rem
		padding 0 1rem

		+below(980px)
			// flex-wrap: nowrap | wrap | wrap-reverse;
			// flex-wrap nowrap

	& .swiper-container
		width 100%
		height 100%
		padding 0 1rem 7rem

		& > .swiper-wrapper > .swiper-slide
			min-height 20rem
			padding 1.6rem 1.4rem
			background-color #f7f7f7
			border 1px solid #efefef
			border-radius .5rem
			display flex
			flex-direction column
			justify-content space-between

		& > .swiper-pagination
			bottom 0

			& > .swiper-pagination-bullet
				size(1.1rem)
				background-color #ddd
				opacity 1

			& > .swiper-pagination-bullet-active
				background-color darken(#ddd, 20%)

