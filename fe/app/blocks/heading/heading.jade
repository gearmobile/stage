mixin heading()
	+b.heading&attributes(attributes)

		// heading left
		.heading__left
			h2.heading__title about <span>us</span>
			small.heading__subtitle what we do with love

		// heading right
		.heading__right
			p.heading__text Lorem ipsum dolor sit amet, libero turpis non cras ligula, id commodo, aenean est in volutpat amet sodales, porttitor bibendum facilisi suspendisse
