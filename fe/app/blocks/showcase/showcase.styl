.showcase
	padding 0 1rem

	&__wrapper
		lost-center 100%

	&__item
		lost-column 1/3
		lost-column-gutter 4rem
		height calc(4/16*100vh)
		border .1rem solid rgba($black, .4)
		position relative
		overflow hidden

		&:nth-child(-n+3)
			margin-bottom 4rem

		&:nth-child(4)
			lost-column 2/3

		+below(980px)
			lost-column 1/2
			lost-column-gutter 3rem
			lost-column-cycle 2

			&:nth-child(-n+4)
				margin-bottom 3rem

			&:nth-child(4)
				lost-column 1/2

			&:nth-child(5)
				lost-column 1/1

		+below(768px)
			lost-column 1/1
			lost-column-gutter 0
			lost-column-cycle 0

			&:not(:last-child)
				margin-bottom 3rem

			&:nth-child(4)
				lost-column 1/1


		&:nth-child(1) .showcase__image
			background-image url(../images/showcase-image-1.jpg)

		&:nth-child(2) .showcase__image
			background-image url(../images/showcase-image-2.jpg)

		&:nth-child(3) .showcase__image
			background-image url(../images/showcase-image-3.jpg)

		&:nth-child(4) .showcase__image
			background-image url(../images/showcase-image-4.jpg)

		&:nth-child(5) .showcase__image
			background-image url(../images/showcase-image-5.jpg)

	&__image
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background-position center center
		background-repeat no-repeat
		background-size cover
		transform scale(1)
		transition transform 1s

	&__content
		width 100%
		text-align center
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		color $color-grey
		padding 0 2rem

	&__title
		font-size 3rem
		font-family $lato-light
		text-transform capitalize
		margin 0 0 3rem 0

	&__subtitle
		display block
		font-size 1.6rem
		line-height 1.2
		margin 0 0 4rem 0

	&__button
		display inline-block
		vertical-align middle
		text-transform lowercase
		text-decoration none
		font-size 2.4rem
		color $color-grey
		border .2rem solid $color-grey
		padding 1.5rem 6.4rem 1.8rem
		transition background-color .2s, color .2s

		&:hover
		&:active
			background-color $color-grey
			color $white
