.facts
	padding 13rem 0 20rem
	background-color #f7f7f7
	text-align center

	&__center
		lost-center $width

	&__title
		color #666
		font-size 2.4rem
		font-family $lato-black
		text-transform uppercase
		margin-bottom 5rem

	&__subtitle
		color #666
		font-size 1.6rem
		line-height 2rem
		margin-bottom 7rem
		padding 0 8rem


// FACTS GALLERY
// ----------------------------------------------

.facts-gallery
	lost-center 100%
	box-shadow inset 0 0 0 .1rem rgba(#e2e2e2, 1)

	&__item
		lost-column 3/12 0 0
		padding 4rem 0
		background-color $white

		&:not(:last-child)
			border-right 1px solid #e2e2e2

		&:nth-child(1) .facts-gallery__icon
			background-image url('data:image/png;base64,')

		&:nth-child(2) .facts-gallery__icon
			background-image url('data:image/png;base64,')

		&:nth-child(3) .facts-gallery__icon
			background-image url('data:image/png;base64,')

		&:nth-child(4) .facts-gallery__icon
			background-image url('data:image/png;base64,')

	&__icon
		size(7rem)
		margin 0 auto 4rem
		background-position center center
		background-repeat no-repeat
		background-size 85%

	&__title
		font-size 2.2rem
		color $blue
		text-transform capitalize
		margin-bottom 2.8rem

	&__number
		color #333
		font-size 5.2rem
		font-family $lato-light


// media queries
// --------------------------------------------------------

+below(968px)

	.facts__subtitle
		padding 0 2rem
		line-height 1.8

	.facts-gallery
		margin 0 1rem
		box-shadow none

	.facts-gallery__item
		lost-column 1/2
		box-shadow inset 0 0 0 .1rem rgba(#e2e2e2, 1)

		&:nth-child(-n+2)
			margin-bottom 2.5rem

+below(600px)

	.facts-gallery__item
		lost-column 1/1

	&:nth-child(-n+3)
		margin-bottom 2.5rem
