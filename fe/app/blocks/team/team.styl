.team
	min-height 108.2rem
	background #f7f7f7 url(../images/bg-team.png) 50% 50% no-repeat
	background-size cover
	overflow hidden
	position relative
	padding 26rem 0 38rem

	&::before
		content ''
		display block
		width 100%
		height 16rem
		background-color inherit
		position absolute
		right 0
		top 0
		transform-origin 0 100%
		transform skewY(-4.7deg)

	&__center
		lost-center $width

		& > .heading .heading__title > span,
		& > .heading .heading__subtitle,
		& > .heading .heading__text
			color $white
