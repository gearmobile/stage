.header-topmenu
  display flex
  justify-content space-between
  align-items center
  padding 0 2rem 0 2rem
  position fixed
  top 3rem
  width 100%
  z-index 1
  transition all .2s

  +below(650px)
    display none


  // TOP MENU LOGO
  // ------------------------------

  &__logo
    size(6.9rem, 6.4rem)
    background transparent url(../images/logo.png) 0 0 no-repeat
    background-size cover

    & > a
      squish-text()


  // TOP MENU NAVIGATION
  // ------------------------------

  &__navigation
    display flex
    justify-content space-between

    & > a
      text-decoration none
      text-transform capitalize
      color $white
      transition color .2s
      margin 0 2rem

      &:first-child
        margin-left 0

      &:last-child
        margin-right 0

      &:hover
      &:active
        color $orange


&.is-fixed
  top 0
  padding 1rem 2rem
  z-index 3
  background-color #789
  box-shadow 0 .2rem .3rem #789

  & .header-topmenu__logo
    size(5rem, 4.6rem)

  & .header-topmenu__navigation > a
    font-size 1.4rem
