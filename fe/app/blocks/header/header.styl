.header
	display flex
	justify-content center
	align-items center
	height 103rem
	mih-height 103rem
	background $black url(../images/bg-header.jpg) 50% 50% no-repeat
	background-size cover
	position relative

	&::before
		content ''
		display block
		position absolute
		top 0
		left 0
		size(auto)
		width 100%
		height 100%
		background url(../images/overlay.png) 0 0 repeat
		opacity .6

	&__center
		lost-center $width
		padding 0 10px


