blockquote
	color #999
	line-height 1.2
	font-style italic
	text-transform lowercase
	quotes '\201c' '\201d'

	&::before
		content open-quote

	&::after
		content close-quote

.card
	lost-center 100%
	width 100%
	padding-top 1.6rem
	border-top .2rem solid #cacaca

	& > .card__left
		lost-column 2/10
		lost-column-gutter 10px

		& > .card__image
			width 4.4rem
			height 4.4rem

			& > img
				display block
				width 100%
				height auto

	& > .card__right
		lost-column 8/10
		lost-column-gutter 10px

		& > .card__link
			display inline-block
			vertical-align top
			font-size 1.4rem
			color $blue
			text-decoration none
			margin-bottom .5rem

			&:hover
			&:active
				color darken($blue, 20%)

		& > .card__name
			color #999
			font-size 1.2rem
