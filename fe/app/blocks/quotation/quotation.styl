
.quotation
	background #f7f7f7 url(../images/bg-team.png) 50% 50% no-repeat
	background-size cover
	min-height 83rem
	padding 25rem 0 22rem
	position relative
	overflow hidden
	color $white
	text-align center

	&::before
		content ''
		display block
		width 100%
		height 16rem
		position absolute
		top 0
		left 0
		transform-origin 0 0
		transform skewY(-4.7deg)
		background-color #f7f7f7

	&__center
		lost-center $width


		// QUOTATION SLIDER
		// --------------------------------------------

		& > .swiper-container
			width 100%
			height 100%
			padding-bottom 9rem
			margin-bottom 3rem

			& .swiper-slide
				text-align center
				padding 0 6rem
				font-size 1.8rem
				line-height 1.4

			& > .swiper-pagination
				bottom 0

				& > .swiper-pagination-bullet
					size(1.1rem)
					background-color #ccc


	// QUOTATION LOGO
	// --------------------------------------------

	&__logo
		width 9.3rem
		height 7.9rem
		display inline-block
		vertical-align top
		background url('data:image/png;base64,') 50% 50% no-repeat
		background-size cover
		margin-bottom 9rem

	&__author
		margin-top 5rem
