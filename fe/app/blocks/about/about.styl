$heightBefore = 16rem

.about
	position relative
	padding 13rem 0

	// ABOUT ANGLE
	// ----------------------------------------------

	&::before
		content ''
		display block
		width 120%
		height $heightBefore
		background linear-gradient(8deg, $white 0%, $white 76%, $blue 76%, $blue 100%)
		position absolute
		right 0
		top - $heightBefore
		transform-origin 100% 0
		transform rotate(-4.75deg)

	&__center
		lost-center $width


// ABOUT NAVIGATION
// ----------------------------------------------

.navigation
	margin 8rem 0 10rem
	clearfix()

	&__item
		display block
		float left
		width 17.5rem
		height 5.8rem
		margin-right 1px
		background-color #eaeaea
		text-align center
		transform skewX(-15deg)

		text-decoration none
		text-transform uppercase
		color #333
		font-size 2rem
		line-height 5.8rem

		transition color .2s, background-color .2s

		&:first-child
		&:hover
		&:active
			background-color $blue
			color $white


// ABOUT FEATURES
// ----------------------------------------------

.features
	padding 0 1rem
	overflow hidden

	&__image
		width 12.6rem
		height 10rem
		background-color #eaeaea
		position absolute
		top 50%
		left 1.5rem
		transform translateY(-50%)
		transition background-color .2s
		background-position center center
		background-repeat no-repeat
		overflow hidden

		&::before
		&::after
			content ''
			display block
			width 2rem
			height 100%
			background-color $white
			position absolute
			top 0

		&::before
			left 0
			transform-origin 100% 0
			transform skewX(-11deg)

		&::after
			right 0
			transform-origin 0 100%
			transform skewX(-11deg)

	&__item
		display block
		float left
		width 50%
		text-decoration none
		padding 4rem 4rem 4rem 16rem
		position relative

		&:nth-child(-n + 2)
			border-bottom 1px solid #d1d1d1

		&:nth-child(2n + 1)
			border-right 1px solid #d1d1d1

		&:nth-child(-2n + 3)::after
			content ''
			display block
			size(2.4rem)
			position absolute
			right -(2.4rem/2)
			bottom -(2.4rem/2)
			z-index 1
			background-color $white

		&:hover .features__image
		&:active .features__image
			background-color $blue

		&:nth-child(1) .features__image
			background-image url('data:image/png;base64,')

		&:nth-child(2) .features__image
			background-image url('data:image/png;base64,')

		&:nth-child(3) .features__image
			background-image url('data:image/png;base64,')

		&:nth-child(4) .features__image
			background-image url('data:image/png;base64,')

	&__title
		text-transform capitalize
		color #333
		font-size 2rem
		font-weight 700
		margin-bottom 1.6rem

	& p
		color #999
		line-height 1.1
