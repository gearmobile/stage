.footer
  background-color $color-grey-dark
  padding 6rem 0 50rem

.footer__primary
  lost-utility clearfix
  margin 0 0 3rem 0

.footer__center
  lost-center $width
  padding 0 1rem

.footer__column
  lost-column 4/12
  lost-column-gutter 5rem

.footer__title
  text-transform capitalize
  color $color-white
  font-family $opensans-regular
  font-weight 400
  font-size 1.4rem
  margin 0 0 3rem 0

  & + p
    font-family $opensans-regular
    font-weight 400
    color $color-grey-light
    font-size 1.2rem
    line-height 1.6

.footer__icons
  display flex

  & > a
    display flex
    justify-content center
    align-items center
    width 5rem
    height 5rem
    border-radius 50%
    margin 0 1rem 0 0
    transition background-color .2s

    &:nth-child(1)
      background-color #2e3192

      &:hover
      &:active
        background-color lighten(#2e3192,10%)

    &:nth-child(2)
      background-color #00aeef

      &:hover
      &:active
        background-color lighten(#00aeef,10%)

    &:nth-child(3)
      background-color #ed3123

      &:hover
      &:active
        background-color lighten(#ed3123,10%)

    &:nth-child(4)
      background-color #171a8f

      &:hover
      &:active
        background-color lighten(#171a8f,10%)


.footer__form
  lost-column 8/12
  lost-column-gutter 0
  lost-offset -4/12
