.hero
  min-height 90rem
  height 90rem
  background url('%=static=%assets/hero/hero-bg.jpg') center center no-repeat
  background-size cover
  position relative
  overflow hidden

  &::after
    content ''
    display block
    position absolute
    bottom 0
    right 0
    background-color rgba(253, 99, 78, .3)
    height calc(100vh*0.1)
    width 100%
    transform-origin 100% 0
    transform skewY(-3deg)

    @media screen and (max-width $bp768)
      transform skewY(-4deg)

    @media screen and (max-width $bp500)
      transform skewY(-6deg)

.hero__center
  lost-center $width
  min-height 90rem
  height 90rem
  padding 0 1rem
  position relative

.hero__content
  text-transform uppercase
  text-align right
  color $color-white
  position absolute
  left 1rem
  bottom 11rem

  @media screen and (max-width $bp768)
    left 50%
    transform translateX(-50%)
    text-align center

.hero__title
  font-family $opensans-regular
  font-weight 400
  font-size 2.5rem
  margin 0 0 1rem 0

  &::after
    content '/'
    color $color-green

.hero__subtitle
  display block
  font-family $opensans-regular
  font-weight 400
  font-size 1rem
  margin 0 3rem 0 0

  &::after
    content '/'
    color $color-red

  @media screen and (max-width $bp768)
    margin 0

