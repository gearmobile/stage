.features
  background-color $color-green

.features__primary
  padding 12rem 0

.features__center
  lost-center $width
  padding 0 1rem

.features__column
  lost-column 3/12
  lost-column-gutter 4rem
  display flex
  flex-direction column
  position relative

  & > .features-icon
    height 4.4rem
    color $color-white
    margin 0 0 2rem 0

  & > h3
    text-transform capitalize
    color $color-white
    font-family $opensans-regular
    font-weight 400
    font-size 1.8rem
    margin 0 0 2rem 0

  & > p
    font-weight 300
    color $color-white
    line-height 1.6
    margin 0 0 3rem 0

  & > a
    font-size 1.4rem
    text-decoration none
    text-transform capitalize
    color $color-white
    position absolute
    bottom 0
    left 0

.features__row
  lost-center 100%

.features__block-text
  lost-column 5/20
  padding 5.5rem 5rem 0

.features__block-thumb
  lost-column 13/20
