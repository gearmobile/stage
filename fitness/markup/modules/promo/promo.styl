.promo
  background url('%=static=%assets/promo/promo-bg.jpg') center center no-repeat
  position relative
  overflow hidden

  &::after
    content ''
    display block
    position absolute
    bottom 0
    left 0
    height calc(100vh*0.05)
    width 100%
    background-color $color-red
    z-index 2
    transform-origin 0 0
    transform skewY(3deg)

.promo__center
  lost-center $width
  height 724px
  display flex
  flex-direction column
  justify-content center
  align-items center
  color $color-white
  padding 0 1rem

.promo__title
  font-size 3rem
  font-family $opensans-bold
  font-weight 400
  line-height 1.4
  margin 0 0 2.5rem 0
  text-align center

.promo__slogan
  max-width 60%
  text-align center
  font-family $opensans-regular
  font-weight 400
  font-size 1.2rem
  line-height 2

  @media screen and (max-width 500px)
    max-width: 100%


// DECOR BLOCK
// -------------------------------

.promo__decor
  width 100%
  height 14rem
  position absolute
  left 0
  bottom 0
  z-index 1
  overflow hidden

  &::before
  &::after
    content ''
    display block
    background-color $color-grey-dark
    width 100%
    position absolute

  &::before
    transform-origin 0 0
    height 90%
    left 0
    bottom 0
    transform skewY(5deg)

  &::after
    transform-origin 100% 0
    height 100%
    top 0
    right 0
    transform skewY(-6deg)
