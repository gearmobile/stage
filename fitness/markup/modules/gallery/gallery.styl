.gallery
  background-color $color-red

.gallery__center
  lost-center $width
  padding 0 1rem

.gallery__row
  display flex
  background-color $color-white

  & > div:last-child
    background-color $color-green

  @media screen and (max-width 600px)
    flex-direction column

.gallery__primary
  lost-column 4/12
  lost-column-gutter 0

  @media screen and (max-width 768px)
    lost-column 1/1
    lost-column-gutter 0

.gallery__secondary
  lost-column 8/12
  lost-column-gutter 0

  @media screen and (max-width 768px)
    lost-column 1/1
    lost-column-gutter 0

.gallery__row:nth-child(1) div:nth-child(1) .gallery__image
  background url('%=static=%assets/gallery/gallery-image-01.jpg') center center no-repeat
  background-size cover

.gallery__row:nth-child(1) div:nth-child(2) .gallery__image
  background url('%=static=%assets/gallery/gallery-image-02.jpg') center center no-repeat
  background-size cover

.gallery__row:nth-child(1) div:nth-child(2) .gallery__content h2
.gallery__row:nth-child(2) div:nth-child(2) .gallery__content h2
.gallery__row:nth-child(1) div:nth-child(2) .gallery__content h4
.gallery__row:nth-child(2) div:nth-child(2) .gallery__content h4
.gallery__row:nth-child(1) div:nth-child(2) .gallery__content p
.gallery__row:nth-child(2) div:nth-child(2) .gallery__content p
  color $color-white

.gallery__row:nth-child(2) div:nth-child(1) .gallery__image
  background url('%=static=%assets/gallery/gallery-image-03.jpg') center center no-repeat
  background-size cover

.gallery__row:nth-child(2) div:nth-child(2) .gallery__image
  background url('%=static=%assets/gallery/gallery-image-04.jpg') center center no-repeat
  background-size cover

.gallery__image
  height 360px

.gallery__image img
  display block
  width 100%
  height auto

.gallery__data
  display flex
  justify-content space-between
  align-items center
  text-transform uppercase
  color $color-white
  font-size 1.4rem
  font-family $montserrat-regular
  font-weight 400
  padding 6rem 6rem 0

.gallery__meta
  display flex
  align-items center
  justify-content space-between

.gallery-icon
  margin 0 0 0 1rem

.gallery__content
  padding 4rem 6rem 8rem 4rem
  position relative

  & > h4
    color $color-red
    text-transform uppercase
    font-family $montserrat-regular
    font-weight 400
    font-size 1rem
    margin 0 0 1rem 0

  & > h2
    color $color-green
    text-transform uppercase
    font-family $opensans-light
    font-weight 300
    font-size 2.2rem
    line-height 1.2
    margin 0 0 3rem 0

  & > p
    color $color-grey
    font-size 1.2rem
    font-family $opensans-regular
    font-weight 400
    line-height 1.8
    margin 0

  & > .gallery-icon
    position absolute
    top 4rem
    right 3rem
    size(3.2rem)

  @media screen and (max-width 600px)
    text-align center
