.top-head
    position: fixed
    top: 0
    left: 0
    z-index: 9
    width: 100%

    &__center
        lost-center $width
        padding: 0 $gutter

        & .navigation
            display: flex
            padding: 8rem 0 0
            transition: padding .2s

            &__item
                padding: 0 1rem
                position: relative

                &:not(:last-child)::after
                    content: ''
                    display: block
                    width: .6rem
                    height: .6rem
                    border-radius: 50%
                    position: absolute
                    top: 50%
                    right: -.3rem
                    transform: translateY(-50%)
                    background-color: $brown-dark-color

                &:first-child .navigation__link::before
                &:hover .navigation__link::before
                &:focus .navigation__link::before
                    background: url('%=static=%assets/hero/link-underline.png') repeat-x

            &__link
                text-transform: uppercase
                text-decoration: none
                font: 1.8rem/1 $lora-bold
                color: rgb(31, 22, 17)
                position: relative

                &::before
                    content: ''
                    display: block
                    width: 100%
                    height: 1.7rem
                    position: absolute
                    left: 0
                    bottom: -1.5rem

&.is-fixed .navigation
    padding: 2rem 0
