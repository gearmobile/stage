// OVERLAY STYLE
// ----------------------------------------------

.overlay
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  background-color rgba($color-violet, .3)
  z-index 2


// OVERLAY CLOSING CROSS
// -----------------------------------------------

.overlay__button
  size(3rem)
  position absolute
  right 2rem
  top 2rem
  overflow hidden
  border none
  background url('%=static=%assets/overlay/cross.png') no-repeat center center
  text-indent 200%
  color transparent
  outline none
  z-index 100
  transition transform .2s

  &:hover
    transform rotate(-45deg)


// MENU STYLE
// ----------------------------------

.overlay__navigation
  text-align center
  position relative
  top 50%
  height 60%
  font-size 5.4rem
  transform translateY(-50%)

  @media screen and (max-width 980px)
    font-size 4rem

  @media screen and (max-width 980px)
    font-size 3rem


.overlay__list
  margin 0 auto
  display inline-block
  height 100%
  position relative


.overlay__item
  display block
  height 20%
  // height calc(100% / 5)
  height calc(100% / 6)
  // min-height 54px
  min-height 5.4rem


.overlay__link
  font-weight 300
  display block
  color $color-white
  transition color .2s
  text-decoration none
  text-transform capitalize


.overlay__link:hover,
.overlay__link:focus
  color $color-blue


// EFFECTS
// ---------------------------------------

.overlay-hugeinc
  opacity 0
  visibility hidden
  transition opacity .5s, visibility 0s .5s


.overlay-hugeinc.open
  opacity 1
  visibility visible
  transition opacity .5s


.overlay-hugeinc .overlay__navigation
  -webkit-perspective 1200px
  perspective 1200px


.overlay-hugeinc .overlay__list
  opacity .4
  transform translateY(-25%) rotateX(35deg)
  transition transform .5s, opacity .5s


.overlay-hugeinc.open .overlay__list
  opacity 1
  transform rotateX(0deg)


.overlay-hugeinc.close .overlay__list
  transform translateY(25%) rotateX(-35deg)


@media screen and (max-height 30.5em)
  .overlay .overlay__navigation
    height: 70%
    // font-size: 34px
    font-size: 3.4rem

  .overlay .overlay__item
    // min-height: 34px
    min-height: 3.4rem


