.button
  padding 1.6rem 5rem
  border none
  border-radius 50em
  background-color $color-blue
  color $color-white
  text-transform capitalize
  font-size 1.2rem
  font-family $opensans-semibold
  font-weight 600
  transition background-color .2s

  &:hover
    background-color darken($color-blue, 10%)
