.hero
  height 90rem
  background url('%=static=%assets/hero/hero-bg.png') 50% 50% no-repeat
  background-size cover

  &__center
    max-width $width
    min-height 90rem
    margin auto
    padding 0 1rem
    color $color-white
    position relative

    @media screen and (max-width: 768px)
      position static
      display flex
      justify-content center
      align-items center

  &__content
    max-width 70%
    position absolute
    left 30%
    top 60%
    padding 0 1rem

    @media screen and (max-width: 768px)
      position static
      max-width 90%
      text-align center

  &__title
    font-family $opensans-light
    font-size 5rem
    font-weight 300
    line-height 1.2
    margin 0 0 3rem

    @media screen and (max-width: 768px)
      font-size 4rem

    @media screen and (max-width: 500px)
      font-size 3rem

  &__subtitle
    font-size 1.8rem
    font-family $opensans-regular
    font-weight 400
    line-height 1.6
    margin 0

    @media screen and (max-width: 768px)
      font-size 1.6rem
      line-height 1.8

    @media screen and (max-width: 500px)
      font-size 1.4rem
