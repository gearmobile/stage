.conectivity__center
  lost-center $width
  padding 0 1rem

.conectivity__column
  lost-column 6/12
  lost-column-gutter 0


// TOP SECTION
// --------------------------------------------

.conectivity__top
  background-color #e9eef1

  & .conectivity__center
    justify-content center
    padding 0

    @media screen and (max-width 980px)
      flex-direction column


  // FIRST COLUMN
  // -----------------------------------------

  & .conectivity__column:nth-child(1)
    display flex
    flex-direction column
    justify-content center
    padding 0 2rem

    @media screen and (max-width 980px)
      lost-column 1/1
      padding 6rem 2rem

    @media screen and (max-width 768px)
      text-align center

    & .connectivy-title
      margin 0 1.4rem 0 0

      @media screen and (max-width 500px)
        margin 0 0 2rem 0

    & h1
      font-size 4rem
      font-weight 300
      text-transform capitalize
      line-height 1.2
      color #2b303b
      font-family $opensans-light
      margin 0 0 3rem
      display flex
      align-items center

      @media screen and (max-width 768px)
        justify-content center

      @media screen and (max-width 500px)
        font-size 3rem
        flex-direction column

    & h3
      color #696f7c
      font-size 2rem
      line-height 1.5
      font-weight 300
      font-family $opensans-light
      margin 0 0 2rem

      @media screen and (max-width 980px)
        margin 0 0 4rem

      @media screen and (max-width 500px)
        font-size 1.6rem

    & p
      color #44474f
      font-family $opensans-regular
      font-weight 400
      font-size 1.4rem
      line-height 1.8
      margin 0


  // SECOND COLUMN
  // -----------------------------------------

  & .conectivity__column:nth-child(2)
    // width 50%
    height calc(7/16*100vw)
    max-height 56rem
    background #e9eef1 url('%=static=%assets/conectivity/conectivity-image-01.png') 50% 50% no-repeat
    background-size cover

    @media screen and (max-width 980px)
      width 100%
      height calc(9/16*100vw)


// MIDDLE SECTION
// --------------------------------------------

.conectivity__middle
  background-color #f4f8fb


  // MIDDLE FIRST ROW
  & .conectivity__row:nth-child(1)
    gradient()

    @media screen and (max-width 980px)
      background-color $color-violet

    & .conectivity__center

      @media screen and (max-width 980px)
        display flex
        justify-content center
        flex-direction column


    // MIDDLE FIRST ROW FIRST COLUMN
    & .conectivity__column:nth-child(1)
      background url('%=static=%assets/conectivity/conectivity-video-bg.png') 50% 50% no-repeat
      background-size cover
      position relative

      @media screen and (max-width 980px)
        height calc(3/4*100vw)
        width 100%
        margin 1rem 0 0 0

      & .video__button
        text-decoration none
        display block
        background-color #2b303b
        box-shadow 0 .1rem .1rem 0 rgba(0, 0, 0, .15)
        width 8.5rem
        height 5.6rem
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)

        &::before
          content ''
          width 0
          height 0
          border-style solid
          border-width 6px 0 6px 10px
          border-color transparent transparent transparent $color-white
          position absolute
          top 50%
          left 50%
          transform translate(-50%, -50%)
          transition background-color .2s

        &:hover
          background-color lighten(#2b303b, 10%)

        &:focus
        &:active
          outline none


    // MIDDLE FIRST ROW SECOND COLUMN
    & .conectivity__column:nth-child(2)
      background-color #835fa8
      padding 6rem 0 14rem 5rem
      color $color-white
      position relative

      @media screen and (max-width 980px)
        width 100%
        padding 6rem 2rem 6rem 2rem

      @media screen and (max-width 768px)
        text-align center

      & .data
        font-size 1.2rem
        font-style italic
        margin 0 0 2rem

        @media screen and (max-width 768px)
          font-size 1rem

      & blockquote
        font-style italic
        font-size 3.2rem
        font-family $opensans-light
        line-height 1.4
        margin 0 0 3rem

        @media screen and (max-width 980px)
          font-size 2.8rem

        @media screen and (max-width 768px)
          font-size 2rem

      & .meta
        display flex
        align-items center

        @media screen and (max-width 768px)
          justify-content center
          flex-direction column

      & .meta__image
        border-radius 50%
        margin 0 2rem 0 0

        @media screen and (max-width 768px)
          margin 0 0 2rem 0

      & .meta__name
        text-transform capitalize
        font-size 1.5rem

      & .latest-news
        padding 1rem 1.6rem 1rem 1.4rem
        position absolute
        background-color #232323
        font-size 1.2rem
        text-transform capitalize
        color $color-white
        text-decoration none
        position absolute
        left 0
        bottom 0

        @media screen and (max-width 980px)
          left 50%
          transform translateX(-50%)

        &:hover
          background-color lighten(#232323, 10%)


  // MIDDLE SECOND ROW
  & .conectivity__row:nth-child(2)
    display flex

    & .conectivity__center
      display flex

      @media screen and (max-width 768px)
        flex-direction column
        justify-content center


    // MIDDLE SECOND ROW FIRST COLUMN
    & .conectivity__column:nth-child(1)
      display flex
      flex-direction column
      justify-content center
      padding 4rem 7rem 0 4rem
      background-color $color-white
      position relative

      @media screen and (max-width 980px)
        padding 4rem 4rem 2rem 4rem

      @media screen and (max-width 768px)
        width 100%
        text-align center
        padding 6rem 2rem 4rem 2rem

      &::after
        content ''
        display block
        width 0
        height 0
        border-style solid
        border-width 1rem 0 1rem .8rem
        border-color transparent transparent transparent $color-white
        position absolute
        right -.8rem
        top 50%
        transform translateY(-50%)

        @media screen and (max-width 980px)
          display none

      & h3
        color #232323
        font-size 2.3rem
        line-height 1.4
        font-family $opensans-light
        font-weight 300
        margin 0 0 2rem

        @media screen and (max-width 768px)
          margin 0 0 4rem

      & p
        font-size 1.4rem
        font-family $opensans-regular
        color #83969f
        line-height 1.6
        margin 0 0 5rem

      & .conectivity__comments
        display flex
        align-items center
        padding 0 0 1.4rem
        color #83969f

        @media screen and (max-width 768px)
          justify-content center

        & .number
          font-size 3rem
          font-family $opensans-light
          font-weight 300
          padding-right 1.5rem
          border-right 1px solid #ecece6

        & .comments
          padding-left 1.5rem
          text-transform capitalize
          font-size 1.2rem
          font-family $opensans-semibold
          font-weight 600
          color #83969f
          text-decoration none

          &:hover
            text-decoration underline


    // MIDDLE SECOND ROW SECOND COLUMN
    & .conectivity__column:nth-child(2)
      background url('%=static=%assets/conectivity/conectivity-image-02.png') 0 0 no-repeat
      background-size cover

      @media screen and (max-width 768px)
        width 100%
        height calc(9/16*100vw)
        margin 0 0 1rem 0


// BOTTOM SECTION
// ----------------------------------------------

.conectivity__bottom
  width 100%
  background url('%=static=%assets/conectivity/conectivity-image-03.png') center center no-repeat
  background-size cover
  padding-bottom 60%
  position relative

  & .conectivity__row
    gradient-reverse()

    @media screen and (max-width 768px)
      background-color $color-violet

  & .conectivity__column
    background-color #835fa8
    color $color-white
    padding 0 1rem
    height calc(6/16*100vw)
    max-height 46rem
    display flex
    flex-direction column
    justify-content center

    @media screen and (max-width 768px)
      width 100%
      height auto
      padding 6rem 1rem

    & blockquote
      font-style italic
      font-size 3.2rem
      font-family $opensans-light
      line-height 1.3
      margin 0 0 3rem

      @media screen and (max-width 980px)
        font-size 2.6rem

      @media screen and (max-width 800px)
        font-size 2.2rem

      @media screen and (max-width 768px)
        font-size 2rem
        text-align center
        margin 0 0 4rem

    & .meta
      display flex
      align-items center

      @media screen and (max-width 768px)
        justify-content center
        flex-direction column

    & .meta__image
      border-radius 50%
      margin 0 2rem 0 0

      @media screen and (max-width 768px)
        margin 0 0 2rem 0

    & .meta__name
      text-transform capitalize
      font-size 1.5rem
