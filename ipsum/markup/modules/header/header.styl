.header
  padding 5rem 0 0 0
  background-color transparent
  position fixed
  top 0
  width 100%
  z-index 1
  transform translate(0, 0)
  transition transform .6s

  @media screen and (max-width 500px)
    padding 2rem 0 0 0

  &.is-active
    transform translate(0, -100%)

  &__center
    max-width $width
    margin auto
    padding 0 2rem
    display flex
    justify-content space-between

    @media screen and (max-width 500px)
      justify-content center
      position relative

  &__navigation
    display flex
    align-items center

    & > .button
      background-color #835fa8
      font-family $opensans-semibold
      font-weight 600
      font-size 1rem
      padding 1.6rem 3.2rem
      margin 0 2rem 0 0

      &:hover
        background-color lighten(#835fa8, 10%)

      @media screen and (max-width 500px)
        display none

  &__search
    display flex
    align-items center
    background-color #343c48
    border-radius 50em
    padding 1.5rem 3rem
    margin 0 1.4rem 0 0
    transition background-color .2s

    @media screen and (max-width 500px)
      display none

    & > input
      padding 0
      border none
      background-color transparent
      color #9da5b0
      font-size 1rem
      font-family $opensans-regular
      font-weight 400
      transition width .5s

    &:hover
      background-color lighten(#343c48, 10%)

    & > .icon-search
      size(1.4rem)


// HEADER ICON
// ---------------------------------------------

.header__icon
  display block
  size(3rem)
  text-decoration none
  position relative
  z-index 4

  @media screen and (max-width 500px)
    position absolute
    top 0
    right 2rem
    transition transform .2s

    &:hover
      transform rotate(-90deg)

  &.is-hide
    opacity 0
    visibility hidden

  &:focus
  &:active
    outline none

  & > span
    display block
    background-color $color-white
    // width 1.8rem
    width 3rem
    height .4rem
    margin auto
    position relative
    border-radius 50em
    // top .7rem
    top 1.3rem

    &::before
    &::after
      content ''
      display block
      // width 1.8rem
      width 3rem
      height .4rem
      background-color $color-white
      border-radius 50em
      position absolute
      left 0
      transition all .2s

    &::before
      // top -.7rem
      top -1.2rem

    &::after
      // top .7rem
      top 1.2rem

