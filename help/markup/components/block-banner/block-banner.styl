// BLOCK-BANNER
// --------------------------------------------------
.block-banner
    position relative
    padding 2rem 0

    // BLOCK-BANNER STRIKE
    // --------------------------------------------------
    &::before
        content ''
        display block
        height .1rem
        width 160%
        background-color rgba( $help-color-white, .2 )
        position absolute
        top 0
        left -30%

    // BLOCK-BANNER CENTER
    // --------------------------------------------------
    & > .center
        display flex
        padding 0

        @media screen and ( max-width $desktop )
            flex-direction column

    // BLOCK-BANNER PRIMARY
    // --------------------------------------------------
    &__primary
        lost-column 6/12
        lost-column-gutter $gutter

        @media screen and ( max-width $desktop )
            lost-column 1/1
            lost-column-gutter 0
            margin-bottom 4rem

        @media screen and ( max-width $mobile )
            display flex
            flex-direction column

    // BLOCK-BANNER SECONDARY
    // --------------------------------------------------
    &__secondary
        lost-column 6/12
        lost-column-gutter $gutter

        & .block-submit .form__row--primary
            margin 0

        & .block-submit .form__row--secondary
            display none

        & .block-submit .form__email
            width calc( 100% - 24rem - 2rem )

            @media screen and ( max-width $mobile )
                width 100%

        & .block-submit .form__submit
            width 24rem
            // padding 0 4rem

        @media screen and ( max-width $desktop )
            lost-column 1/1
            lost-column-gutter 0

    // BLOCK-BANNER TERTIARY
    // --------------------------------------------------
    &__tertiary
        lost-column 1/2
        lost-column-gutter $gutter
        padding 0 0 0 6rem
        display flex
        flex-direction column
        justify-content center
        min-height 5rem
        position relative

        &::before
            content ''
            display block
            size( 5rem )
            position absolute
            top 0
            left 0
            bg( $banner-icon )

        @media screen and ( max-width $mobile )
            lost-column 1/1
            lost-column-gutter 0

            &:first-child
                margin-bottom 3rem

    // BLOCK-BANNER CONTENT
    // --------------------------------------------------
    &__content
        // padding 1rem 0 0 0

    // BLOCK-BANNER TITLE
    // --------------------------------------------------
    &__title
        text-transform uppercase
        color $help-color-orange
        font 900 1.5rem/2 $raleway

    // BLOCK-BANNER SLOGAN
    // --------------------------------------------------
    &__slogan
        color $help-color-white
        font 400 1.6rem/1.2 $ptsans
