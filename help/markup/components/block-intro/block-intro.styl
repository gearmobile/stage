// intro
// ---------------------------

.intro
    //

    & .center
        //

    &__primary
        padding 6rem 0
        background-color $color-white

    &__secondary
        background-color $color-white

    &__title
        text-align center
        margin 0 0 6rem

    & .intro-list
        display flex
        justify-content space-between

        &__item
            lost-column 3/12
            lost-column-gutter 0
            min-height 18rem
            position relative

            &:nth-child(1)
                background: url( '%=static=%assets/block-intro/intro-list-item-bg-01.png' ) 0 0 no-repeat

            &:nth-child(2)
                background: url( '%=static=%assets/block-intro/intro-list-item-bg-02.png' ) 0 0 no-repeat

            &:nth-child(3)
                background: url( '%=static=%assets/block-intro/intro-list-item-bg-03.png' ) 0 0 no-repeat

        &__text
            position absolute
            right 0
            bottom 0
