// FOOTER
// ----------------------------------------
.footer
    padding 4rem 0
    background-color $color-grey--light

    // FOOTER CENTER
    // ----------------------------------------
    & > .center
        display flex
        justify-content space-between
        align-items center

    // FOOTER PRIMARY
    // ----------------------------------------
    &__primary
        display flex
        align-items center
        position relative
        height 3.2rem
        padding 0 0 0 4.6rem

        &::before
            content ''
            display block
            position absolute
            top 0
            left 0
            bg($footer-logo)

        & p
            font 400 1.4rem/1.2 $ptsans
            color $color-black--light

    // FOOTER SECONDARY
    // ----------------------------------------
    &__secondary
    
        @media screen and ( max-width $bp768 )
            display none

        & a
            margin 0 1rem
            font 400 1.4rem/1.2 $ptsans
            color $color-black--light

            &:hover
                color $color-orange

    // FOOTER TERTIARY
    // ----------------------------------------
    &__tertiary

        & nav
            display flex

        & a
            display flex
            size( 3.2rem )
            border-radius 50%
            justify-content center
            align-items center
            background-color $color-orange

            &:not(:first-child)
                margin 0 0 0 1rem

            &:hover
            &:active
                background-color $color-brown

            & .footer-icon
                fill: $color-white
                size( 1.6rem )
