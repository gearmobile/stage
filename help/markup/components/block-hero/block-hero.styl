// HERO
// ---------------------------------
.hero
    height 90rem
    background #342727 url( '%=static=%assets/block-hero/hero-bg.jpg' ) 50% 50% no-repeat
    background-size cover
    position relative

    &::before
        content ''
        display block
        min-width 100%
        min-height 100%
        background url( '%=static=%assets/block-hero/hero-overlay.png' ) 50% 50% no-repeat
        background-size cover
        position absolute
        top 0
        left 0

    // HERO CENTER
    // -----------------------------------
    & > .center
        height 90rem
        display flex
        flex-direction column
        justify-content center

    // HERO CONTENT
    // -------------------------------
    & .content
        position relative
        color $color-white

        // CONTENT TITLE
        // -------------------------------
        &__title
            text-transform uppercase
            font 900 6rem/1.2 $raleway
            margin 0 0 6rem
            max-width 68rem

        // CONTENT SUBTITLE
        // -------------------------------
        &__subtitle
            font 400 1.8rem/1.6 $ptsans
            max-width 48rem

        // HERO BUTTON
        // -------------------------------
        & > .btn
            margin 8rem 0 0

    // HERO INFO
    // ---------------------------------
    & .info
        position absolute
        bottom 0
        left 0
