// BLOCK-WIDGET
// ----------------------------------------------
.block-widget
    display flex
    flex-direction column

    &:not(:last-child)
        margin 0 0 2.4rem

    // BLOCK-WIDGET HEADER
    // ----------------------------------------------
    &__header
        padding 3rem
        background-color $help-color-white
        position relative

        &::before
        &::after
            content ''
            display block
            position absolute
            position absolute
            size( 2rem )
            top -1rem
            border-radius 50%
            background-color $help-color-grey-light

        &::before
            left -1rem

        &::after
            right -1rem

    // BLOCK-WIDGET TITLE
    // ----------------------------------------------
    &__title
        font 700 2.4rem/1.2 $raleway
        color $help-color-grey-dark
        text-align center
        margin 0 0 2rem

    // BLOCK-WIDGET LIST
    // ----------------------------------------------
    &__list
        display flex
        justify-content space-around
        margin 0 0 4rem

    &__item
        //

    // BLOCK-WIDGET CAPTION
    // ----------------------------------------------
    &__caption
        color $help-color-grey-medium-x
        text-transform uppercase
        font 400 1rem/1.4 $ptsans

        &::after
            content ':'
            font 400 1rem/1.2 $ptsans

    // BLOCK-WIDGET VALUE
    // ----------------------------------------------
    &__value
        font 700 1.8rem/1.4 $ptsans
        color $help-color-grey-dark

        // BLOCK-WIDGET CURRENCY
        // ----------------------------------------------
        & .block-widget__currency
            font 400 1.3rem/1.4 $ptsans
            color $help-color-grey-dark
            vertical-align top

    // BLOCK-WIDGET TOTAL
    // ----------------------------------------------
    &__total
        margin 0 0 4rem
        text-align center

    // BLOCK-WIDGET HEADING
    // ----------------------------------------------
    &__heading
        text-transform uppercase
        font 900 1.5rem/1.4 $raleway
        color $help-color-grey-dark

    // BLOCK-WIDGET TOTAL VALUE
    // ----------------------------------------------
    &__total-value
        font 700 4rem/1.4 $ptsans
        color $help-color-grey-dark

        & .block-widget__currency
            font 700 2rem/1.2 $ptsans
            vertical-align top

    // BLOCK-WIDGET RESET
    // ----------------------------------------------
    &__reset
        display flex

    // BLOCK-WIDGET ICON
    // ----------------------------------------------
    &__icon
        display flex
        justify-content center
        align-items center
        size( 3.2rem )
        border-radius 50%
        background-color $help-color-orange

        & .block-widget-icon
            fill $help-color-white

        &:hover
            background-color $help-color-brown

    // BLOCK-WIDGET LINK
    // ----------------------------------------------
    &__link
        color $help-color-orange
        font 600 1.7rem/3.2rem $raleway
        margin 0 0 0 1rem

    // BLOCK-WIDGET FOOTER
    // ----------------------------------------------
    &__footer
        display flex
        justify-content center
        align-items center
        min-height 10rem
        background url( '%=static=%assets/block-widget/widget-bg.jpg' ) 0 0 no-repeat
        position relative

        &::before
            content ''
            display block
            height .4rem
            width 100%
            position absolute
            left 0
            top -.2rem
            background url( '%=static=%assets/block-widget/widget-border-bg.png' ) 0 0 repeat-x
