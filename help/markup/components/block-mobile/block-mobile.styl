// BLOCK-MOBILE
// ----------------------------------------------------
.block-mobile
    min-height 36rem
    background url( '%=static=%assets/block-mobile/block-mobile-bg.png' ) 0 0 repeat
    position relative

    @media screen and ( min-width $tablet )
        min-height 25rem

    // BLOCK-MOBILE CENTER
    // ----------------------------------------------------
    & .center
        display flex
        flex-direction column

        @media screen and ( min-width $tablet )
            position relative
            min-height 25rem
            justify-content center
            // padding 0 0 0 36%

    // BLOCK-MOBILE CONTENT
    // ----------------------------------------------------
    &__content
        display flex
        flex-direction column
        justify-content center
        min-height 36rem

        @media screen and ( min-width $tablet )
            padding 0 0 0 40%
            min-height 25rem

        // BLOCK-MOBILE CONTENT TEXT
        // ----------------------------------------------------
        & p
            font 400 1.4rem/1.4 $ptsans
            color $help-color-white
            margin 0 0 2rem

    // BLOCK-MOBILE CAPTION
    // ----------------------------------------------------
    &__caption
        max-width 80%
        font 700 2rem/1.2 $raleway
        color $help-color-white
        margin 0 0 2rem

    // BLOCK-MOBILE APPS
    // ----------------------------------------------------
    &__apps
        display flex
        flex-direction column

        @media screen and ( min-width $tablet )
            flex-direction row

    // BLOCK-MOBILE ICONS
    // ----------------------------------------------------
    &__icon
        size( 16rem, 6rem )
        background-color $help-color-black
        border-radius .4rem

        // BLOCK-MOBILE ICON PRIMARY
        // ----------------------------------------------------
        &--primary
            margin 0 0 1rem
            bg( $app-store )

            @media screen and ( min-width $tablet )
                margin 0 2rem 0 0

        // BLOCK-MOBILE ICON SECONDARY
        // ----------------------------------------------------
        &--secondary
            bg( $google-play )

    // BLOCK-MOBILE IMAGE
    // ----------------------------------------------------
    &__image
        size( 12rem, 17.2rem )
        position absolute
        right 0
        bottom 0
        background url( '%=static=%assets/block-mobile/mobile-image-mobile.png' ) 0 0 no-repeat

        @media screen and ( min-width $tablet )
            display none

