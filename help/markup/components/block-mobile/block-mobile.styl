// MOBILE
// ---------------------------------------
.mobile
    background url( '%=static=%assets/block-mobile/block-mobile-bg.png' ) 0 0 repeat-x
    background-size cover

    // MOBILE CENTER
    // ---------------------------------------
    & .center
        lost-center $width flex
        min-height 20rem

    &__primary
    &__secondary
    &__tertiary
        display flex
        align-items center

    // MOBILE PRIMARY
    // ---------------------------------------
    &__primary
        lost-column 3/12
        lost-column-gutter $gutter

    // MOBILE TITLE
    // ---------------------------------------
    &__title
        font 700 2.4rem/1.2 $raleway
        color $color-white

    // MOBILE SECONDARY
    // ---------------------------------------
    &__secondary
        lost-column 5/12
        lost-column-gutter $gutter
        position relative
        padding 0 0 0 30rem

        & p
            font 400 1.6rem/1.2 $ptsans
            color $color-white

    &__image
        size( 28.1rem, 22.5rem )
        position absolute
        bottom 0
        left 0
        background url( '%=static=%assets/block-mobile/block-mobile-image.png' ) 0 0 no-repeat

    // MOBILE TERTIARY
    // ---------------------------------------
    &__tertiary
        lost-column 4/12
        lost-column-gutter $gutter
        justify-content flex-end

        & nav
            display flex

            & a:nth-child(1)
                bg($mobile-app-store-icon)

            & a:nth-child(2)
                bg($mobile-google-store-icon)
                margin 0 0 0 1rem
