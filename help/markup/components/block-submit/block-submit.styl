// BLOCK-SUBMIT
// ---------------------------------------
.block-submit
    //

    // BLOCK-SUBMIT FORM
    // ---------------------------------------
    & .form
        //

        // BLOCK-SUBMIT ROW
        // ---------------------------------------
        &__row
            display flex

            // BLOCK-SUBMIT ROW PRIMARY
            // ---------------------------------------
            &--primary
                margin 0 0 2rem

                @media screen and ( max-width $mobile )
                    flex-direction column

        // BLOCK-SUBMIT EMAIL
        // ---------------------------------------
        &__email
            height 5rem
            border-radius 50em
            background-color $help-color-white
            border .1rem solid $help-color-white
            box-shadow inset 0 .3rem 0 #dadada
            width calc( 100% - 26rem - 2rem )
            margin 0 2rem 0 0
            padding 1.2rem 3rem 1.2rem 3rem
            font 600 1.6rem/1.2 $raleway
            color $help-color-grey-medium
            transition box-shadow .2s, color .2s

            &:focus
                box-shadow none
                color $help-color-grey-dark

            &.is-error
                border-color $help-color-orange
                color $help-color-orange

            @media screen and ( max-width $mobile )
                width 100%
                margin 0 0 2rem

        // BLOCK-SUBMIT SUBMIT
        // ---------------------------------------
        &__submit
            max-width 26rem
            background-color $help-color-orange
            border .1rem solid $help-color-orange
            border-radius 50em
            height 5rem
            padding 0 6rem
            font 600 1.6rem/1.2 $raleway
            color $help-color-white
            transition background-color .2s, border-color .2s

            &:hover
                background-color $help-color-brown
                border-color $help-color-brown

            &:focus
            &:active
                background-color $help-color-brown-dark
                border-color $help-color-brown-dark

        // BLOCK-SUBMIT CHECK
        // ---------------------------------------
        &__check
            position absolute
            clip rect( 0, 0, 0, 0 )

            &:checked + .form__label::before
                bg( $checkbox-checked )

        // BLOCK-SUBMIT LABEL
        // ---------------------------------------
        &__label
            display inline-block
            vertical-align middle
            height 3rem
            position relative
            padding 0 0 0 4rem
            font 400 1.4rem/1.4rem $ptsans
            color $help-color-white
            cursor pointer

            &::before
                content ''
                display block
                size( 3rem )
                position absolute
                left 0
                top 0
                bg( $checkbox )

            & a
                color $help-color-orange

                &:hover
                    text-decoration underline


