// BLOCK-CALC
// -----------------------------------------
.block-calc
    padding 14rem 0 0 0
    background-color $help-color-grey-light

    // BLOCK-CALC CENTER
    // -----------------------------------------
    & > .center
        display flex
        flex-direction column

    // BLOCK-CALC PRIMARY
    // -----------------------------------------
    &__primary
        display flex
        justify-content space-between

    // BLOCK-CALC
    // -----------------------------------------
    &__main
        lost-column 8/12
        lost-column-gutter $gutter

    // BLOCK-CALC HEADER
    // -----------------------------------------
    &__header
        margin 0 0 16rem

    // BLOCK-CALC TITLE
    // -----------------------------------------
    &__title
        padding 0 0 0 8rem
        font 400 4rem/5.2rem $raleway
        color $help-color-grey-dark
        position relative

        &::before
            content ''
            display block
            size( 4rem, 5.2rem )
            position absolute
            left 0
            top 0
            bg( $calc-icon )

    // BLOCK-CALC SUBTITLE
    // -----------------------------------------
    &__subtitle
        margin 5rem 0 0 8rem

        & p
            font 400 1.8rem/1.4 $ptsans
            color $help-color-grey-dark

    // BLOCK-CALC CAPTION
    // -----------------------------------------
    &__caption
        text-transform uppercase
        font 900 1.5rem/1.2rem $raleway
        color $help-color-grey-dark
        margin 0 0 2rem

    // BLOCK-CALC CONTENT
    // -----------------------------------------
    &__content
        //

    // BLOCK-CALC GALLERY
    // -----------------------------------------
    & .gallery
        border .3rem solid $help-color-white

        // BLOCK-CALC GALLERY HEADER
        // -----------------------------------------
        &__header
            padding 5rem 0
            border-bottom .3rem solid $help-color-white

            // BLOCK-CALC GALLERY CONTROLS
            // -----------------------------------------
            & .controls
                padding 0 4rem

                // BLOCK-CALC GALLERY CONTROLS ITEM
                // -----------------------------------------
                &__item
                    text-transform uppercase
                    font 900 1.3rem/1.2 $raleway
                    color $help-color-grey-dark
                    position relative

                    &:not(:last-child)
                        margin 0 2rem 0 0

                    &::after
                        content ''
                        display block
                        width 0
                        height .3rem
                        background-color $help-color-orange
                        position absolute
                        left 0
                        bottom -.6rem
                        transition width .2s

                    &:hover
                        color $help-color-orange

                    &:hover::after
                        width 100%

        // BLOCK-CALC GALLERY MAIN
        // -----------------------------------------
        &__main
            //

            // BLOCK-CALC GALLERY LIST
            // -----------------------------------------
            & .list
                //

                // BLOCK-CALC GALLERY LIST ITEM
                // -----------------------------------------
                &__item
                    display flex
                    justify-content space-between
                    padding 4rem

                    &:not(:last-child)
                        border-bottom .1rem solid $help-color-white

                // BLOCK-CALC GALLERY PRIMARY
                // -----------------------------------------
                & .primary
                    display flex
                    align-items center
                    lost-column 4/8
                    lost-column-gutter $gutter

                & .primary__thumb
                    display flex
                    justify-content center
                    align-items center
                    size( 10rem )
                    border-radius 50%
                    background-color $help-color-white

                & .primary__image
                    border-radius 50%

                & .primary__caption
                    margin 0 0 0 2rem
                    font 700 1.8rem/1.4 $ptsans
                    color $help-color-grey-dark

                // BLOCK-CALC GALLERY SECONDARY
                // -----------------------------------------
                & .secondary
                    display flex
                    flex-direction column
                    justify-content center
                    lost-column 2/8
                    lost-column-gutter $gutter
                    padding 0 0 0 2rem

                & .secondary__title
                    font 700 4rem/1.2 $ptsans
                    color $help-color-grey-dark

                & .secondary__currency
                    vertical-align top
                    font-size 2.4rem
                    margin 0 0 0 -.6rem

                & .secondary__subtitle
                    text-transform uppercase
                    font 400 1rem/1.2 $ptsans
                    color $help-color-grey-medium-x

                // BLOCK-CALC GALLERY TERTIARY
                // -----------------------------------------
                & .tertiary
                    display flex
                    align-items center
                    justify-content center
                    lost-column 2/8
                    lost-column-gutter $gutter

                & .stepper
                    display flex

                & .stepper__button
                    size( 4rem )
                    cursor pointer
                    color $help-color-white
                    background-color $help-color-orange
                    font 700 3rem/1.2 $ptsans
                    border-radius .4rem
                    transition background-color .2s

                    &:hover
                    &:active
                        background-color $help-color-brown

                    &--left
                        border-top-right-radius 0
                        border-bottom-right-radius 0

                    &--right
                        border-top-left-radius 0
                        border-bottom-left-radius 0

                & .stepper__input
                    border none
                    padding 0
                    size( 5rem, 4rem )
                    background-color $help-color-white
                    font 700 1.6rem/1.2 $ptsans
                    color $help-color-grey-dark
                    text-align center
                    box-shadow inset 0 .3rem 0 #dadada

    // BLOCK-CALC SIDEBAR
    // -----------------------------------------
    &__sibebar
        lost-column 3/12
        lost-column-gutter $gutter

    // BLOCK-CALC SECONDARY
    // -----------------------------------------
    &__secondary
        display flex
        padding 10rem 0

        @media screen and ( max-width $mobile )
            flex-direction column
            padding 4rem 0

        // BLOCK-CALC SECONDARY PRIMARY
        // -----------------------------------------
        & .block-calc-primo
            lost-column 1/2
            lost-column-gutter $gutter
            display flex
            flex-direction column

            @media screen and ( max-width $mobile )
                lost-column 1/1
                lost-column-gutter 0
                margin-bottom 4rem

            &__title
                text-transform uppercase
                font 900 1.5rem/1.6 $raleway
                color $help-color-grey-dark

                @media screen and ( max-width $mobile )
                    font-size 1.3rem

            &__list
                display flex
                flex-direction row
                margin 4rem 0

                @media screen and ( max-width $desktop-x )
                    flex-direction column

            &__item
                lost-column 2/6
                lost-column-gutter $gutter

                @media screen and ( max-width $desktop-x )
                    lost-column 1/1
                    lost-column-gutter 0
                    display flex
                    align-items center

                    &:not(:last-child)
                        margin 0 0 2rem

            &__thumb
                size( 5rem )
                margin 0 0 2rem
                bg( $block-calc-icon )

                @media screen and ( max-width $desktop-x )
                    margin 0 1rem 0 0

            &__slogan
                font 700 1.6rem/1.2 $ptsans
                color $help-color-grey-dark

                @media screen and ( max-width $desktop-x )
                    width calc( 100% - 5rem - 1rem )

            &__mark
                max-width 40rem
                padding 1.6rem 0 0 0
                position relative
                text-transform uppercase
                font 400 1rem/1.6 $ptsans
                color $help-color-grey-medium-x

                &::before
                    content '*'
                    font 700 1.2rem/1 $ptsans
                    color $help-color-orange
                    position absolute
                    top 0
                    left 0

                @media screen and ( max-width $desktop-x )
                    max-width 100%

        // BLOCK-CALC BLOCK-CALC-SECONDO
        // -----------------------------------------
        & .block-calc-secondo
            lost-column 1/2
            lost-column-gutter $gutter

            @media screen and ( max-width $tablet )
                lost-column 1/1
                lost-column-gutter 0
                display flex
                flex-direction column

        // BLOCK-CALC SECONDARY SECONDARY
        // -----------------------------------------
        & .secondary
            lost-column 1/2
            lost-column-gutter $gutter
            display flex
            flex-direction column

            @media screen and ( max-width $tablet )
                lost-column 1/1
                lost-column-gutter 0
                margin 0 0 3rem

            &__title
                text-transform uppercase
                font 900 1.5rem/3.2rem $raleway
                color $help-color-grey-dark
                margin 0 0 3rem
                padding 0 0 0 4.2rem
                position relative

                &::before
                    content ''
                    display block
                    size( 3.2rem )
                    position absolute
                    top 0
                    left 0
                    bg( $icon-exclamation )

            & > p
                font 400 1.4rem/1.4 $ptsans
                color $help-color-grey-dark

        // BLOCK-CALC SIDEBAR TERTIARY
        // -----------------------------------------
        & .tertiary
            lost-column 1/2
            lost-column-gutter $gutter
            display flex

            @media screen and ( max-width $tablet )
                lost-column 1/1
                lost-column-gutter 0

            & > p
                font 700 1.6rem/1.6 $ptsans
                color $help-color-grey-dark
