// BLOCK-CALC
// -----------------------------------------
.block-calc
    padding 14rem 0 0 0
    background-color $help-color-grey-light

    // BLOCK-CALC CENTER
    // -----------------------------------------
    & > .center
        display flex

    // BLOCK-CALC PRIMARY
    // -----------------------------------------
    &__primary
        border 1px dashed #000
        display flex
        flex-direction column

        @media screen and ( max-width $tablet )
            flex-direction row
            justify-content space-between

    // BLOCK-CALC SIDEBAR
    // -----------------------------------------
    &__sibebar
        background-color salmon
        margin 0 0 2rem

        @media screen and ( min-width $tablet )
            lost-column 3/12
            lost-column-gutter $gutter
            order 2
            margin 0

    // BLOCK-CALC MAIN
    // -----------------------------------------
    &__main
        background-color lightgreen
        height 600px

        @media screen and ( min-width $tablet )
            lost-column 9/12
            lost-column-gutter $gutter
            order 1

    // BLOCK-CALC WIDGET
    // -----------------------------------------
    & .widget
        display flex
        flex-direction column

        @media screen and ( max-width $tablet )
            flex-direction row

        @media screen and ( max-width $mobile )
            flex-direction column

        // BLOCK-CALC WIDGET HEADER
        // -----------------------------------------
        &__header
            padding 3rem
            background-color $help-color-white
            position relative

            @media screen and ( max-width $tablet )
                width calc( 100% - 26rem )

            @media screen and ( max-width $mobile )
                width 100%

            // BLOCK-CALC WIDGET HEADER CORNERS
            // -----------------------------------------
            &::before
            &::after
                content ''
                display block
                size( 1rem )
                background-color blue //!!
                border-radius 50%
                position absolute
                top -.5rem

                @media screen and ( max-width $tablet )
                    display none

            &::before
                left -.5rem

            &::after
                right -.5rem

        // BLOCK-CALC WIDGET FOOTER
        // -----------------------------------------
        &__footer
            display flex
            justify-content center
            align-items center
            height 10rem
            background-color green //!!
            position relative

            @media screen and ( max-width $tablet )
                width 26rem

            @media screen and ( max-width $mobile )
                width 100%

            // BLOCK-CALC WIDGET FOOTER CORNERS
            // -----------------------------------------
            &::before
            &::after
                content ''
                display block
                background-color red //!!
                size( 1rem )
                border-radius 50%
                position absolute
                bottom -.5rem

            &::before
                left -.5rem

            &::after
                right -.5rem

        // BLOCK-CALC WIDGET LIST
        // --------------------------------------------
        & .list
            display flex
            flex-direction column

            @media screen and ( max-width $tablet )
                flex-direction row
                justify-content space-between

        // BLOCK-CALC WIDGET LIST TITLE
        // --------------------------------------------
        & .title
            font 700 1.5rem/1.2 $raleway
            color $help-color-grey-dark

            @media screen and ( max-width $tablet )
                display none

        // BLOCK-CALC WIDGET LIST ITEM
        // --------------------------------------------
        & .list__item:not(:last-child)
            margin 0 0 2rem

            // BLOCK-CALC WIDGET LIST ITEM COMPLEX
            // --------------------------------------------
            &:nth-child(2)
                display flex

                & .primo
                    margin 0 2rem 0 0

            @media screen and ( max-width $tablet )
                margin 0

        &--primary
            margin 0 0 2rem
            background-color red

        &--secondary
            background-color cyan

            @media screen and ( max-width $tablet )
                display none


    // BLOCK-CALC SECONDARY
    // -----------------------------------------
    &__secondary
        display flex
        padding 10rem 0

        @media screen and ( max-width $mobile )
            flex-direction column
            padding 6rem 0

        // BLOCK-CALC SECONDARY HALF-FIRST
        // -----------------------------------------
        & .half-first
            lost-column 1/2
            lost-column-gutter $gutter

            @media screen and ( max-width $mobile )
                lost-column 1/1
                lost-column-gutter 0
                margin-bottom 2rem

            // BLOCK-CALC SECONDARY HALF-FIRST HEADER
            // -----------------------------------------
            & .header
                font 900 1.4rem/1.4 $raleway
                text-transform uppercase
                color $help-color-grey-dark
                margin 0 0 1rem

                @media screen and ( min-width $tablet )
                    font 900 1.8rem/1.2 $raleway

            // BLOCK-CALC SECONDARY HALF-FIRST LIST
            // -----------------------------------------
            & .list
                display flex
                flex-direction row
                margin 2rem 0

                @media screen and ( max-width $tablet )
                    flex-direction column

                // BLOCK-CALC SECONDARY HALF-FIRST LIST ITEM
                // -----------------------------------------
                &__item
                    lost-column 1/3
                    lost-column-gutter $gutter
                    display flex
                    flex-direction column
                    min-height 3.2rem

                    @media screen and ( max-width $tablet )
                        lost-column 1/1
                        lost-column-gutter 0
                        flex-direction row
                        align-items center

                        &:not(:last-child)
                            margin 0 0 2rem

                // BLOCK-CALC SECONDARY HALF-FIRST LIST THUMB
                // -----------------------------------------
                &__thumb
                    size( 5rem )
                    bg( $block-calc-icon )

                    @media screen and ( max-width $tablet )
                        margin 0 1rem 0 0

                    @media screen and ( min-width $tablet )
                        margin 0 0 2rem 0

                // BLOCK-CALC SECONDARY HALF-FIRST LIST SLOGAN
                // -----------------------------------------
                &__slogan
                    font 700 1.6rem/1.2 $ptsans
                    color $help-color-grey-dark

                    @media screen and ( max-width $tablet )
                        width calc( 100% - 5rem - 1rem )

            // BLOCK-CALC SECONDARY HALF-FIRST MARK
            // -----------------------------------------
            & .mark
                font 400 1rem/1.5 $ptsans
                text-transform uppercase
                color $help-color-grey-medium-x
                padding 1.6rem 0 0 0
                position relative

                &::before
                    content '*'
                    color $help-color-orange
                    font 700 2rem/1 $ptsans
                    position absolute
                    top 0
                    left 0

                @media screen and ( min-width $tablet )
                    max-width 40rem

        // BLOCK-CALC SECONDARY HALF-SECOND
        // -----------------------------------------
        & .half-second
            lost-column 1/2
            lost-column-gutter $gutter
            display flex

            @media screen and ( max-width $tablet )
                flex-direction column

            @media screen and ( max-width $mobile )
                lost-column 1/1
                lost-column-gutter 0

        // BLOCK-CALC SECONDARY QUATTER-FIRST
        // -----------------------------------------
        & .quatter-first
            lost-column 1/2
            lost-column-gutter $gutter

            & .header
                display flex
                align-items center
                min-height 3.2rem
                text-transform uppercase
                padding 0 0 0 4.2rem
                margin 0 0 2rem
                position relative

                &::before
                    content ''
                    display block
                    size( 3.2rem )
                    position absolute
                    top 0
                    left 0
                    bg( $icon-exclamation )

            & > p
                font 400 1.4rem/1.4 $ptsans
                color $help-color-grey-dark

            @media screen and ( max-width $tablet )
                lost-column 1/1
                lost-column-gutter 0
                margin-bottom 2rem

        // BLOCK-CALC SECONDARY QUATTER-SECOND
        // -----------------------------------------
        & .quatter-second
            lost-column 1/2
            lost-column-gutter $gutter

            & > p
                font 700 1.6rem/1.5 $ptsans
                color $help-color-grey-dark

            @media screen and ( max-width $tablet )
                lost-column 1/1
                lost-column-gutter 0
