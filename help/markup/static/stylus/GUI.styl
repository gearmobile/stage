
// BUTTON
// ------------------------------------------
.button
    width 23rem
    height 5rem
    border-radius 50em
    border-width .1rem
    border-style solid
    font 600 1.4rem/1.2 $raleway
    transition color .2s, border-color .2s, background-color .2s
    background-color transparent
    white-space nowrap

    // BUTTON PRIMARY
    // ------------------------------------------
    &--primary
        border-color $help-color-orange
        color $help-color-orange

        &:hover
            background-color $help-color-orange
            color $help-color-white

        &:active
            background-color $help-color-brown
            border-color $help-color-brown

    // BUTTON SECONDARY
    // ------------------------------------------
    &--secondary
        border-color $help-color-yellow
        color $help-color-yellow

        &:hover
            background-color $help-color-yellow
            color $help-color-white

        &:active
            background-color $help-color-orange
            border-color $help-color-orange

    // BUTTON TERTIARY
    // ------------------------------------------
    &--tertiary
        //

    // BUTTON QUATERNARY
    // ------------------------------------------
    &--quaternary
        border-color $help-color-white
        color $help-color-white

        &:hover
            border-color $help-color-yellow
            color $help-color-yellow

        &:active
            background-color $help-color-yellow
            color $help-color-white
