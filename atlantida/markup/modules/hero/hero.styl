.hero
  height: 69.8rem

  & > .swiper-container
    height: 100%
    width: 100%

    & .swiper-slide
      display: flex
      flex-direction: column
      justify-content: center
      align-items: center
      background: url('%=static=%assets/hero/hero-bg.jpg') 50% 50% no-repeat
      background-size: cover

      & p
        margin: 0
        color: $color-white
        font-size: 1.4rem
        line-height: 1.2
        font-family:$crimson_text-roman

      & h1
        padding: 3.5rem 0
        margin: 2rem 0 4rem
        text-transform: uppercase
        color: $color-white
        font-size: 3.6rem
        line-height: 1.2
        font-family: $amsdam-regular
        font-weight: 400
        letter-spacing .2rem
        border-top: 1px solid $color-white
        border-bottom: 1px solid $color-white

      & a
        display: block
        padding: 1.6rem 3.2rem
        border: .1rem solid $color-white
        text-decoration: none
        text-transform: capitalize
        font-size: 1.5rem
        color: $color-white
        font-family: $montserrat-regular
        font-weight: 400
        background: url('%=static=%assets/hero/button-bg.png') 50% 100% no-repeat
