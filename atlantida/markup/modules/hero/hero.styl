.hero
    min-height: 69.8rem
    height: 69.8rem
    background: url("%=static=%assets/hero/hero-bg.jpg") no-repeat
    background-size: cover
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center

// HERO SLIDER

.slider
    max-width: 110rem

.slick-list
    padding: 5rem 0 4rem

.slick-arrow
    padding: 0
    width: 3.4rem
    height: 3.4rem
    border-radius: 50%

    &:focus
        outline: none

.slick-prev
.slick-next
    position: absolute
    top: 51%
    transform: translateY(-50%)

.slick-prev
    left: 0
    background: url("%=static=%assets/hero/arrow-left.png") 50% 50% no-repeat

.slick-next
    right: 0
    background: url("%=static=%assets/hero/arrow-right.png") 50% 50% no-repeat

.slider__subtitle
    text-align: center
    font: 400 1.4rem/1.2 $crimson_text-roman
    color: $color-white
    margin: 0 0 2rem 0

.slider__content
    text-align: center


.slider__title
    display: inline-block
    text-transform: uppercase
    text-align: center
    font: 400 3.6rem/1.2 $amsdam-regular
    color: $color-white
    padding: 3rem 2rem
    letter-spacing: .2rem
    margin: 0 0 4rem 0
    position: relative

    &::before
    &::after
        content: ''
        display: block
        height: 5px
        width: 100%
        left: 0
        position: absolute
        background: url("%=static=%assets/hero/underline-pattern.png") 0 0 repeat-x

    &::before
        top: 0

    &::after
        bottom: 0

    @media screen and (max-width: $bp600)
        font-size: 2rem
        padding: 2rem 1rem

.slider__button
    display: inline-block
    border: 2px solid $color-white
    text-transform: capitalize
    font: 400 1.5rem/1.2 $montserrat-regular
    color: $color-white
    text-decoration: none
    padding: 1.5rem 2.6rem
    transition: background-color .2s, color .2s
    position: relative

    &::after
        content: ''
        display: block
        width: 15px
        height: 50px
        position: absolute
        left: 50%
        transform: translateX(-50%)
        bottom: -44px
        background: transparent url("%=static=%assets/hero/arrow.png") 50% 0% no-repeat // arrow.png
        z-index: 1
        transition: bottom .2s

    &:hover
    &:focus
        background-color: $color-white
        color: $color-grey

        &::after
            bottom: -52px
