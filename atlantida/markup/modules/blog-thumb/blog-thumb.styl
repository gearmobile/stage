// THUMB
// ------------------------------------------------------------
.thumb
    display: flex
    flex-direction: column


// THUMB IMAGE
// ------------------------------------------------------------
.thumb__image
    margin: 0 0 4rem

    & > img
        display: block
        width: 100%
        height: auto


// THUMB TITLE
// ------------------------------------------------------------
.thumb__title
    text-transform: uppercase
    font: 700 1.6rem/1.2 $montserrat-regular
    color: $color-grey
    margin: 0 0 1.4rem


// THUMB META
// ------------------------------------------------------------
.thumb__meta
    display: flex
    margin: 0 0 2rem

.thumb__author > a
.thumb__date > a
    text-decoration: none
    font: 400 1.4rem/1.2 $crimson_text-italic
    text-transform: capitalize
    color: $color-grey

.thumb__author
    padding: 0 .5rem 0 0

.thumb__date
    padding: 0 0 0 .5rem


// THUMB LINKS
// ------------------------------------------------------------
.thumb__links
    display: flex
    padding: 1.4rem 0 1.4rem .6rem
    margin: 0 0 3rem
    border-top: .1rem solid #818181
    border-bottom: .1rem solid #818181

    & li
        margin: 0 1rem 0 0

    & a
        font: 400 1.4rem/1.2 $crimson_text-italic
        text-transform: capitalize
        text-decoration: none
        color: $color-grey

        &:hover
        &:focus
            text-decoration: underline

.thumb__comments
    padding: 0 0 0 2.3rem
    background: url("%=static=%assets/blog-thumb/thumb-link-icon-01.png") 0 50% no-repeat

.thumb__views
    padding: 0 0 0 3rem
    background: url("%=static=%assets/blog-thumb/thumb-link-icon-02.png") 0 50% no-repeat

.thumb__tag
    padding: 0 0 0 2.3rem
    background: url("%=static=%assets/blog-thumb/thumb-link-icon-03.png") 0 50% no-repeat


// THUMB TEXT
// ------------------------------------------------------------
.thumb p
    font: 400 1.4rem/1.8 $crimson_text-roman
    color: $color-grey
    margin: 0 0 3rem


// THUMB READ
// ------------------------------------------------------------
.thumb__read
    display: flex
    justify-content: center
    align-items: center
    width: 13.4rem
    height: 4rem
    /*padding: 1.4rem 2.6rem*/
    text-decoration: none
    border: .2rem solid $color-grey
    transition: color .2s, background-color .2s
    color: $color-grey
    text-transform: capitalize
    font: 400 1.3rem/1 $montserrat-regular

    &:hover
    &:focus
        background-color: $color-grey
        color: $color-white



















