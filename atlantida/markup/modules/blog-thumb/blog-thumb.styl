// THUMB
// ------------------------------------------------------------
.thumb
    display: flex
    flex-direction: column

    &:hover .thumb__image > img
        transform: scale(1.1)


// THUMB IMAGE
// ------------------------------------------------------------
.thumb__image
    margin: 0 0 4rem
    overflow: hidden

    & > img
        display: block
        width: 100%
        height: auto
        transform: scale(1)
        transition: transform .4s
        will-change: transition


// THUMB TITLE
// ------------------------------------------------------------
.thumb__title
    text-transform: uppercase
    font: 700 1.6rem/1.6 $montserrat-regular
    color: $color-grey
    margin: 0 0 1.4rem

    @media screen and (max-width: $bp980)
        text-align: center
        margin: 0 0 3rem


// вынести в отдельный модуль

// THUMB META
// ------------------------------------------------------------
.thumb__meta
    display: flex
    margin: 0 0 2rem

.thumb__meta li
    font: 400 1.4rem/1.2 $crimson_text-italic
    text-transform: capitalize
    color: $color-grey

.thumb__meta .thumb__author
    padding: 0 .5rem 0 0

    &::after
        content: '/'

.thumb__meta a
    color: $color-grey
    text-decoration: none

    &:hover
    &:focus
        text-decoration: underline



// вынести в отдельный модуль

// THUMB LINKS
// ------------------------------------------------------------
.thumb__links
    display: flex
    padding: 1.4rem 0 1.4rem .6rem
    margin: 0 0 3rem
    border-top: .1rem solid #818181
    border-bottom: .1rem solid #818181

    & li
        margin: 0 1rem 0 0

    & a
        font: 400 1.4rem/1.2 $crimson_text-italic
        text-transform: capitalize
        text-decoration: none
        color: $color-grey

        &:hover
        &:focus
            text-decoration: underline

.thumb__comments
    padding: 0 0 0 2.3rem
    background: url("%=static=%assets/blog-thumb/thumb-link-icon-01.png") 0 50% no-repeat

.thumb__views
    padding: 0 0 0 3rem
    background: url("%=static=%assets/blog-thumb/thumb-link-icon-02.png") 0 50% no-repeat

.thumb__tag
    padding: 0 0 0 2.3rem
    background: url("%=static=%assets/blog-thumb/thumb-link-icon-03.png") 0 50% no-repeat


// THUMB TEXT
// ------------------------------------------------------------
.thumb p
    font: 400 1.4rem/1.8 $crimson_text-roman
    color: $color-grey
    margin: 0 0 3rem


// THUMB READ
// ------------------------------------------------------------
.thumb__read
    display: flex
    justify-content: center
    align-items: center
    width: 13.4rem
    height: 4rem
    text-decoration: none
    border: .2rem solid $color-grey
    transition: color .2s, background-color .2s
    color: $color-grey
    text-transform: capitalize
    font: 400 1.3rem/1 $montserrat-regular

    &:hover
    &:focus
        background-color: $color-grey
        color: $color-white

    @media screen and (max-width: $bp980)
        margin: auto



















