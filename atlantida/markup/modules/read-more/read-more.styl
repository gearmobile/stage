
// READ MORE
// ------------------------------------------------------------

.read-more
    display: flex
    justify-content: center
    align-items: center
    width: 13.4rem
    height: 4rem
    text-decoration: none
    border: .2rem solid $color-grey
    transition: color .2s, background-color .2s
    color: $color-grey
    text-transform: capitalize
    font: 400 1.3rem/1 $montserrat-regular

    &:hover
    &:focus
        background-color: $color-grey
        color: $color-white

    @media screen and (max-width: $bp980)
        margin: auto
