
// BLOCK SOCIALS
// ----------------------------------------------------

.block-socials
    display: flex
    justify-content: center
    border-top: .1rem solid #b7b7b7
    border-bottom: .1rem solid #b7b7b7
    padding: 1.8rem 0
    margin: 0 0 6rem

    &__icon
        display: block
        width: 3.1rem
        height: 3.1rem
        margin: 0 .5rem
        border-radius: 50%
        border: .1rem solid #b7b7b7

        &:nth-child(1)
            background: url("%=static=%assets/block-socials/post-icon-01.png") 50% 50% no-repeat

        &:nth-child(2)
            background: url("%=static=%assets/block-socials/post-icon-02.png") 50% 50% no-repeat

        &:nth-child(3)
            background: url("%=static=%assets/block-socials/post-icon-03.png") 50% 50% no-repeat

        &:nth-child(4)
            background: url("%=static=%assets/block-socials/post-icon-04.png") 50% 50% no-repeat

        &:nth-child(5)
            background: url("%=static=%assets/block-socials/post-icon-05.png") 50% 50% no-repeat
