.team
    min-height: 666px
    padding: 7rem 0
    background: url('%=static=%assets/team/team-bg.jpg') 50% 50% no-repeat
    background-size: cover

    &__center
        lost-center $width
        padding: 0 $gutter

    &__title
        font: 400 2rem/1.2 $amsdam-regular
        color: $color-grey
        text-transform: uppercase
        letter-spacing: .2rem
        text-align: center
        padding: 0 0 3rem
        margin: 0 0 4rem
        background: url('%=static=%assets/team/team-underline.png') 50% 100% no-repeat

    &__subtitle
        text-align: center
        font: 400 1.4rem/1.7 $crimson_text-roman
        color: $color-grey
        margin: 0 0 5rem

    &__gallery
        lost-center 87rem flex
        justify-content: center

    &__item
        lost-column 1/3
        lost-column-gutter 3rem
        min-height: 34rem
        position: relative

        & > img
            display: block
            width: 100%
            height: auto

    &__cover
        position: absolute
        background-color: rgba(246, 246, 246, .82)
        top: 1rem
        left: 1rem
        width: calc(100% - 1rem * 2)
        height: calc(100% - 1rem * 2)

    &__data
        position: absolute
        left: 2rem
        bottom: 2rem
        width: 60%

    &__headling
        padding: 0 0 1rem
        border-bottom: .2rem solid #515151
        margin: 0 0 2rem

    &__name
        text-transform: capitalize
        font: 400 1.3rem/1 $montserrat-regular
        color: $color-grey
        margin: 0 0 .8rem

    &__occupation
        font: 400 1.3rem/1 $crimson_text-roman
        color: $color-grey
        text-transform: capitalize
        font-style: italic
        margin: 0

    &__icons
        display: flex
        align-items: center
        list-style-type: none
        margin: 0
        padding: 0

        & li
            /*height: 1rem*/

        & li:not(:last-child)
            padding-right: .5rem
            border-right: .1rem solid #3e3d3d

        & li:not(:first-child)
            padding-left: .5rem

        & .team-icon
            width: 1rem
            height: 1rem



























