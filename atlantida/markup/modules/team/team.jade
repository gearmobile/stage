include ../heading/heading

mixin team(data)
    .team#team
        .team__center
            +heading('our team')
            .team__gallery

                .team__item
                    img(src='%=static=%img/assets/team/team-gallery-item-01.jpg' alt='Team Image')
                    a.team__cover(href="#0")
                        .team__data
                            .team__headling
                                h4.team__name john roderick
                                p.team__occupation designer
                            nav.team__socials
                                a(href="#0" title='Facebook')
                                    != jadeHelpers.Icon.call(locals, {iconName: 'team-facebook', className: 'team-icon'})
                                a(href="#0" title='Twitter')
                                    != jadeHelpers.Icon.call(locals, {iconName: 'team-twitter', className: 'team-icon'})
                                a(href="#0" title='Behance')
                                    != jadeHelpers.Icon.call(locals, {iconName: 'team-behance', className: 'team-icon'})

                .team__item
