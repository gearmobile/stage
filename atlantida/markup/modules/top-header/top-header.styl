.top-header
    position: fixed
    top: 0
    left: 0
    width: 100%
    z-index: 2
    padding: 1.6rem 0 1.8rem
    background-color: $color-white
    transition: padding .2s

    &.is-fixed
        padding: 1.4rem 0
        background-color: #e3e3e3
        border-bottom: .2rem solid $color-grey-light

    &__center
        lost-center $width flex
        padding: 0 $gutter
        justify-content: space-between
        align-items: center
        text-transform: uppercase

    &__primary
        display: flex
        justify-content: space-between
        align-items: center

    &__logo
        display: flex
        align-items: center
        padding-left: 5.2rem
        height: 2.9rem
        font-family: $montserrat-regular
        color: #757575
        text-decoration: none
        font-size: 1.8rem
        background: url('%=static=%assets/top-header/logo.png') 0 50% no-repeat

    &__navigation
        margin: 0 0 0 10rem

        @media screen and (max-width: 1100px)
            display: none

    &__link
        text-decoration: none
        font: 400 1.2rem/1 $montserrat-regular
        color: #aaaaaa
        margin: 0 .8rem

        &:hover
        &:focus
            color: #757575

    &__secondary
        display: flex
        align-items: center

        @media screen and (max-width: 1100px)
            display: none

    &__icons
        display: flex
        align-items: center
        text-decoration: none
        padding: 0 1rem

        &:nth-child(2)
        &:nth-child(3)
            border-left: .1rem solid #aaaaaa


// OVERLAY MOBIE MENU

.overlay
    position: fixed
    width: 100%
    height: 100%
    top: 0
    left: 0
    background-color: rgba(153,204,51,0.9)
    /*display: none*/

.overlay__trigger
    display: none
    width: 2rem
    height: 2rem
    background-color: #757575
    transition: background-color .2s
    border-radius: .2rem

    &:hover
    &:focus
        background-color: $color-grey

    @media screen and (max-width: 1100px)
        display: block

.overlay__button
    width: 8rem
    height: 8rem
    position: absolute
    top: 2rem
    right: 2rem
    background: url('%=static=%assets/top-header/cross.png') 50% 50% no-repeat
    border: none
    outline: none
    color: transparent
    transition: transform .2s

    &:hover
    &:focus
        transform: rotate(-90deg)

.overlay__wrapper
    position: relative
    height: 80%
    top: 50%
    transform: translateY(-50%)
    font-size: 4rem
    text-align: center
    /*perspective: 1200px*/

.overlay__menu
    display: inline-block
    height: 100%
    margin: 0 auto
    position: relative
    opacity: .4
    /*transform: translateY(-25%) rotateX(35deg)*/
    transition: transform .5s, opacity .5s

.overlay__item
    display: block
    height: 20%
    height: calc(100% / 9)
    min-height: 4rem

.overlay__link
    display: block
    font-weight: 300
    color: $color-grey
    transition: color .2s
    text-decoration: none

    &:hover
    &:focus
        color: $color-black


.overlay--effect
    opacity: 0
    visibility: hidden
    transition: opacity .5s, visibility .5s

.is-open
    opacity: 1
    visibility: visible
    transition: opacity .5s

    & .overlay__menu
        opacity: 1
        transform: rotateX(0)

.is-close .overlay__menu
    transform: translateY(25%) rotateX(-35deg)






























