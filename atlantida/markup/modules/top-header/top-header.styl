.top-header
    position: fixed
    top: 0
    left: 0
    width: 100%
    z-index: 2
    padding: 1.6rem 0 1.8rem
    background-color: $color-white
    transition: padding .2s

    &.is-fixed
        padding: 1.4rem 0
        background-color: #e3e3e3
        border-bottom: .2rem solid $color-grey-light

    &__center
        lost-center $width flex
        padding: 0 $gutter
        justify-content: space-between
        text-transform: uppercase

    &__primary
        display: flex
        justify-content: space-between
        align-items: center

    &__logo
        display: flex
        align-items: center
        padding-left: 5.2rem
        height: 2.9rem
        font-family: $montserrat-regular
        color: #757575
        text-decoration: none
        font-size: 1.8rem
        background: url('%=static=%assets/top-header/logo.png') 0 50% no-repeat

    &__navigation
        margin: 0 0 0 10rem

        @media screen and (max-width: 1100px)
            display: none

    &__link
        text-decoration: none
        font-family: $montserrat-regular
        color: #aaaaaa
        font-size: 1.2rem
        margin: 0 .8rem

        &:hover
        &:focus
            color: #757575

    &__secondary
        display: flex
        align-items: center

        @media screen and (max-width: 1100px)
            display: none

    &__icons
        display: flex
        align-items: center
        text-decoration: none
        padding: 0 1rem

        &:nth-child(2)
        &:nth-child(3)
            border-left: .1rem solid #aaaaaa


// OVERLAY MOBIE MENU

.overlay
    position: fixed
    width: 100%
    height: 100%
    top: 0
    left: 0
    background-color: rgba(153,204,51,0.9)









































