// POST MAIN
// ----------------------------------------------------
.post-main
    lost-column 8/12
    lost-column-gutter $gutter*3

    @media screen and (max-width: 800px)
        lost-column 1/1
        lost-column-gutter 0


// POST ITEM
// ----------------------------------------------------
.post-item
    margin: 0 0 4rem

    // POST ITEM IMAGE
    &__image
        margin: 0 0 4rem

        & > img
            display: block
            width: 100%
            height: auto

    // POST ITEM TITLE
    &__title
        text-transform: uppercase
        font: 700 1.6rem/1.6 $montserrat-regular
        color: $color-grey
        margin: 0 0 1.4rem

    // POST ITEM CONTENTS
    &__contents

        & p
            font: 400 1.4rem/1.8 $crimson_text-roman
            color: $color-grey
            margin: 0 0 2rem

        & blockquote
            font: 700 1.6rem/1.8 $crimson_text-italic
            color: $color-grey
            padding: 5rem 4rem
            border: .2rem solid #a8a8a8
            margin: 4rem 0


// POST COMMENTS LEAVE
// ----------------------------------------------------
.post-comment-leave

    & .form__button
        background-color: #464646

        &:hover
        &:focus
            background-color: $color-grey-light

    & input
    & textarea
        color: #464646

        +placeholder()
            color: #464646
