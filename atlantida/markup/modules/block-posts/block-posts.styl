
// LATESTS POSTS
// --------------------------------------------------------------

.posts
    margin: 0 0 6rem

    &__heading
        text-transform: uppercase
        font: 400 1.6rem/1 $montserrat-bold
        color: $color-grey
        margin: 0

    &__list
        margin: 4rem 0 0

    &__item
        lost-utility clearfix
        color: $color-grey

        &:not(:last-child)
            padding: 0 0 4rem
            margin: 0 0 3rem
            border-bottom: .1rem solid #b7b7b7

    &__image
        float: left
        width: 11rem
        height: 11rem

        & > img
            display: block
            width: 100%
            height: auto

    &__holder
        margin: 0 0 0 13rem

    &__title
        text-transform: uppercase
        font: 400 1.2rem/1.6 $montserrat-regular
        margin: 0 0 2rem

    & p
        font: 400 1.4rem/1.8 $crimson_text-italic
        margin: 0
