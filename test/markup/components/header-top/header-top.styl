.header-top
    padding: 2rem 0
    background-color: #f5f5f5
    box-shadow: 0 .2rem .4em 0 rgba( $color-black, .2)

    &__center
        lost-center $width flex
        padding: 0 $gutter
        justify-content: space-between


    // HEADER PRIMARY
    // ---------------------------------------------------

    &__primary
        display: flex

        & a
            text-transform: capitalize
            font: 1.3rem/1 $open_sans-regular
            color: #8ea3ad

        & .header-top__language
            position: relative

            & ul
                position: absolute
                padding: 1rem
                background-color: $color-grey
                min-width: 20rem

        & .header-top__currency
            position: relative

            & ul
                position: absolute
                padding: 1rem
                background-color: $color-grey
                min-width: 20rem
                display: none;

    // HEADER SECONDARY
    // ---------------------------------------------------

    &__secondary
        display: flex
        align-items: center

        & li
            padding: .1rem 1rem

        & a
            font: 1.3rem/1 $open_sans-regular
            text-transform: capitalize

            &:hover
                color: $color-green

        & .header-top__account
            border-right: .1rem solid #c8c8c8

        & .header-top__account a
            color: #3b5c6c

        & .header-top__list a
            color: #8ea3ad

















