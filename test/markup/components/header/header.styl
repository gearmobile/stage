.header
    margin: 6rem 0 0 0
    background-color: $color-white

    &__center
        lost-center $width flex


    // HEADER PRIMARY
    // ----------------------------------------------

    &__primary
        padding: 3rem 2rem

        & .header__center
            display: flex
            justify-content: space-between


        // HEADER LOGO
        // --------------------------------------------

        & .header__logo
            text-transform: uppercase

            & h1
                font: 3.2rem/1 $glegoo-regular
                color: #3b5c6c

                & span
                    font: 3.2rem/1 $concert_one-regular

            & small
                text-transform: uppercase
                font: 1.4rem/1 Tahoma, Verdana, Segoe, sans-serif
                color:$color-green
                letter-spacing 0.2rem


        // HEADER FORM
        // ---------------------------------------------

        & .header__form
            display: flex
            flex-direction: column

            & form
                display: flex
                justify-content: flex-end
                margin: 0 0 1rem
                border: .1rem solid #e7e7e7
                background-color: #f5f5f5

            & #search-input
                width: 100%
                padding: 1rem
                background-color: transparent
                border: none
                color: #7e939e
                font: 1.4rem/1.2 $open_sans-regular

                +placeholder()
                    text-transform: capitalize

            & #search-button
                width: 4.6rem
                background-color: #ededed
                border-left: .1rem solid #e7e7e7


        // HEADER ENTRY
        // ---------------------------------------------

        & .header__entry a
            color: #8ea3ad

        & .header__entry--primary
            display: flex
            justify-content: space-between
            align-items: center

        & .header__entry--cart
            display: flex
            align-items: center
            padding: 0 0 0 1rem

            & a
                font: 1.3rem/1 $open_sans-semibold

                &:hover
                    color: $color-green

        & .header__entry--secondary
            display: flex
            justify-content: space-between
            align-items: center
            padding: 1rem 0
            border-right: .1rem solid #c8c8c8

            & a
                font: 1.3rem/1 $open_sans-bold

                &:hover
                    color: $color-green

        & .header__entry--login
            padding: 0 1rem
            border-right: .1rem solid #c8c8c8

        & .header__entry--register
            padding: 0 1rem

        & .header__entry--icon
            display: flex
            justify-content: center
            align-items: center
            width: 3.6rem
            height: 3.6rem
            border-radius: 50%
            background-color: $color-green
            cursor: pointer
            margin: 0 .5rem 0 0

            &:hover
                background-color: darken( $color-green, 10% )

            & .cart-icon
                width: 1.6rem
                height: 1.6rem


    // HEADER SECONDARY
    // ----------------------------------------------

    &__secondary
        background-color: $color-green
        border-bottom: .2rem solid $color-white
        box-shadow: 0 .2rem .4rem 0 rgba( $color-black, .2)

    &__menu
        display: flex

        & a
            display: block
            padding: 1.6rem 1rem
            text-transform: uppercase
            font: 1.6rem/1 $roboto-regular
            color: $color-white
            text-shadow .1rem .1rem .1rem rgba( $color-black, .2)
            transition: background-color .2s

            &:hover
            &:focus
                background-color: $color-grey
