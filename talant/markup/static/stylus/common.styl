
// COMMON STYLES OF THE PROJECT
// ----------------------------------------

*, *::before, *::after
    box-sizing: border-box

html, body
    height 100%
    width: 100%

html
    font-size: 62.5%

ul, ol
    list-style-type: none
    padding: 0
    margin: 0

a
    text-decoration: none
    transition: color .2s
    will-change: transition

    &:focus
        outline: none

button
    cursor: pointer
    padding: 0
    border: none
    background-color: transparent

img
    vertical-align: top

svg
    transition: all .2s

svg path
    fill: inherit

input, textarea
    resize: none
    user-select: text

h1, h2, h3, h4, p
    margin: 0


// BODY STYLES
// ------------------------------------------

.page
    font: 1.6rem/1.2 $crimson-regular
    color: $color-grey
    position: relative

.page__wrapper
    min-height: 100%
    margin-bottom: -50px

.center
    lost-center: $width flex
    flex-direction: column
    align-items: center
    padding: 0 $gutter

* html .page__wrapper
    height: 100%

.page__buffer
    height: 50px