
// FORM
// ----------------------------------------------

.form
    width: 100%

    // FORM ROW
    // ----------------------------------------------

    &__row
        lost-center: 100% flex

        &:not(:last-child)
            margin: 0 0 2rem

    // FORM COLUMN
    // ----------------------------------------------

    &__column
        lost-column 1/2
        lost-column-gutter $gutter*2

        @media screen and ( max-width: $bp768 )
            lost-column 1/1
            lost-column-gutter 0

            &:not(:last-child)
                margin-bottom: 2rem


    // FORM INPUT AND TEXTAREA
    // ----------------------------------------------

    & input
    & textarea
        background-color: transparent
        width: 100%
        border: .2rem solid #464646
        padding: 2rem
        color: #949494
        font: 1.4rem/1.2 $crimson-italic
        transition: border-color .2s
        will-change: transition

        &:hover
        &:active
            border-color: lighten( #464646, 10% )

        +placeholder()
            text-transform: capitalize

    & textarea
        min-height: 10rem

    // FORM BUTTON
    // ----------------------------------------------

    & .button
        background-color: $color-grey-2
        color: $color-white
        border: none

        @media screen and ( max-width: $bp500 )
            margin: auto

        &:hover
            background-color: $color-white
            color: $color-grey-2
