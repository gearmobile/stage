include ../block-hero/block-hero
include ../block-post/block-post
include ../block-category/block-category
include ../block-pagination/block-pagination

mixin block-blog-sidebar()
    .blog-sidebar
        .blog-sidebar__header
            +block-hero( 'blog with sidebar', 'home', 'blog' )
        .blog-sidebar__main
            .blog-sidebar__center
                .blog-sidebar__primary
                    +block-post( '%=static=%img/assets/block-post/post-image-1-1.jpg' )
                    +block-post( '%=static=%img/assets/block-post/post-image-1-2.jpg' )
                    +block-post( '%=static=%img/assets/block-post/post-image-1-3.jpg' )
                    +block-post( '%=static=%img/assets/block-post/post-image-1-4.jpg' )
                    +block-post( '%=static=%img/assets/block-post/post-image-1-5.jpg' )
                    +block-pagination()
                .blog-sidebar__secondary
                    +block-category('categories','photography','website design','branding','flyers','uncategories','popups')
                    +block-category('archives','january 2015','december 2015','november 2015','october 2015','september 2015','august 2015')
