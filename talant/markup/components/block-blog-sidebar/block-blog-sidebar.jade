include ../block-hero/block-hero
include ../block-post/block-post
include ../block-posts-latest/block-posts-latest
include ../block-category/block-category
include ../block-photos/block-photos
include ../block-pagination/block-pagination

mixin block-blog-sidebar()
    .blog-sidebar
        .blog-sidebar__header
            +block-hero( 'blog with sidebar', 'home', 'blog' )
        .blog-sidebar__main
            .blog-sidebar__center
                .blog-sidebar__primary
                    +block-post( '%=static=%img/assets/block-post/post-image-1-1.jpg' )
                    +block-post( '%=static=%img/assets/block-post/post-image-1-2.jpg' )
                    +block-post( '%=static=%img/assets/block-post/post-image-1-3.jpg' )
                    +block-post( '%=static=%img/assets/block-post/post-image-1-4.jpg' )
                    +block-post( '%=static=%img/assets/block-post/post-image-1-5.jpg' )
                    +block-pagination()
                .blog-sidebar__secondary
                    .blog-sidebar__form
                        form( method='post' action='action.php' )
                            fieldset
                                input( type='text' name='search' id='search' placeholder='search' )
                                != jadeHelpers.Icon.call( locals, { iconName: 'search-icon', className: 'blog-sidebar-icon' })
                    +block-posts-latest(
                        'latest posts',
                        '%=static=%img/assets/block-posts-latest/posts-latest-image-01.jpg',
                        '%=static=%img/assets/block-posts-latest/posts-latest-image-02.jpg',
                        '%=static=%img/assets/block-posts-latest/posts-latest-image-03.jpg',
                        '%=static=%img/assets/block-posts-latest/posts-latest-image-04.jpg'
                        )
                    +block-category(
                        'categories',
                        'photography',
                        'website design',
                        'branding',
                        'flyers',
                        'uncategories',
                        'popups'
                        )
                    +block-category(
                        'archives',
                        'january 2015',
                        'december 2015',
                        'november 2015',
                        'october 2015',
                        'september 2015'
                        )
                    +block-photos(
                        'flickr photos',
                        '%=static=%img/assets/block-photos/photos-image-01.jpg',
                        '%=static=%img/assets/block-photos/photos-image-02.jpg',
                        '%=static=%img/assets/block-photos/photos-image-03.jpg',
                        '%=static=%img/assets/block-photos/photos-image-04.jpg',
                        '%=static=%img/assets/block-photos/photos-image-05.jpg',
                        '%=static=%img/assets/block-photos/photos-image-06.jpg'
                        )
