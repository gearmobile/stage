.about
    padding: 6rem 0
    background-color: $color-grey-pale

    // ABOUT CENTER
    // -------------------------------------------

    & .center
        flex-direction: column
        align-items: center


    // ABOUT PRIMARY
    // -------------------------------------------

    &__primary
        display: flex
        flex-direction: column

    // ABOUT IMAGE
    // -------------------------------------------

    &__image
        height: 32.5rem
        background: url( '%=static=%assets/block-about/about-bg.jpg' ) 50% 50% no-repeat
        background-size: cover

    // ABOUT CONTENT
    // -------------------------------------------

    &__content
        background-color: $color-white
        padding: 6rem 7rem 12rem

        & p
            font-size: 1.4rem
            line-height: 2

        @media screen and ( max-width $bp768 )
            text-align center
            padding: 6rem 0

    // ABOUT CONTROLS
    // -------------------------------------------

    &__controls
        margin: 4rem 0 0 0
        display: flex
        justify-content: center

        & .button
            margin: 0 1rem

            &:first-child
                background-color: $color-grey
                color: $color-white

        @media screen and ( max-width $bp500 )
            flex-direction column
            align-items center

            & .button
                margin 1rem 0


    // ABOUT SECONDARY
    // -------------------------------------------

    &__secondary
        display: flex
        justify-content center
        flex-wrap wrap
        width: 100%
        padding: 3rem 0 0 0

    // ABOUT ITEM
    // -------------------------------------------

    &__item
        display: flex
        flex: 0 1 25%
        flex-direction: column
        align-items: center
        padding: .2rem 0
        color: $color-grey

        &:nth-child( -n+3 )
            border-right: .1rem solid $color-grey-smooth

        @media screen and ( max-width $bp768 )
            flex: 0 1 50%
            padding: 3rem 0

            &:nth-child( 2 )
                border-right none

            &:nth-child( -n+2 )
                border-bottom .1rem solid $color-grey-smooth

        @media screen and ( max-width $bp500 )
            flex: 0 1 100%

            &:nth-child( 2n+1 )
                border-right none

            &:nth-child( -n+3 )
                border-bottom .1rem solid $color-grey-smooth

    // ABOUT THUMB
    // -------------------------------------------

    &__thumb
        size( 4rem )
        margin: 0 0 2rem

        & .about-icon
            size( 4rem )
            fill: $color-grey

    // ABOUT CAPTION
    // -------------------------------------------

    &__caption
        font: 1.3rem/1.4 $montserrat-regular
        margin: 0 0 3rem
        text-align: center
        text-transform: uppercase

    // ABOUT COUNT
    // -------------------------------------------

    &__count
        font: 4rem/1.2 $montserrat-regular

        @media screen and ( max-width $bp400 )
            font-size 3rem
