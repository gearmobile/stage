
// SOCIAL-LINKS
// ------------------------------------

.social-links
    margin 4rem 0 0 0

    // SOCIAL-LINKS LIST
    // ------------------------------------

    &__list
        border-top .1rem solid $color-grey-3
        border-bottom .1rem solid $color-grey-3
        padding 2rem 0
        display flex
        justify-content center
        align-items center

    // SOCIAL-LINKS ITEM
    // ------------------------------------

    &__item
        size( 3rem )
        border .1rem solid $color-grey-3
        border-radius 50%
        margin 0 .4rem
        transition background-color .2s, color .2s

        &:hover
            background-color $color-grey-3

            & .post-icon
                fill $color-white

    // SOCIAL-LINKS LINK
    // ------------------------------------

    &__link
        size( 100% )
        display flex
        justify-content center
        align-items center

    // SOCIAL-LINKS ICONS
    // ------------------------------------

    & .post-icon
        fill: $color-grey-3
        size( 1.4rem )
